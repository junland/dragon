version=20200206_a662220d

cd -- "$TMPDIR"
rm -rf musl-${version}
unpack "${worktree}/sources/musl-${version}.tar.lz"

# Build instructions
cd musl-${version}

# Tune up some options to optimize i586/x86_64
patch -Np1 -i "${worktree}/patches/musl/musl-tune.diff"

./configure CROSS_COMPILE="${target}-" \
 --prefix=/tools \
 --libdir=/tools/lib${libSuffix} \
 --syslibdir=/tools/lib \
 --build=$host \
 --host=$target \
 --enable-optimize

make -j${jobs}
make -j${jobs} DESTDIR="$rootdir" install

cleanup()
{
    cd -- "$TMPDIR" && rm -rf musl-${version}
}

