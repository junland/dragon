version=2.38

cd -- "$TMPDIR"
rm -rf glibc-${version}
unpack "${worktree}/sources/glibc-${version}.tar.xz"

# Build instructions
cd glibc-${version}

# Build in a separate directory
rm -rf ../glibc-build
mkdir ../glibc-build
cd ../glibc-build

../glibc-${version}/configure \
 CC="${target}-gcc" \
 CXX="${target}-g++" \
 AR="${target}-ar" \
 RANLIB="${target}-ranlib" \
 CFLAGS="$BTCFLAGS" \
 --prefix=/tools \
 --libdir=/tools/lib${libSuffix} \
 --build=$host \
 --host=$target \
 --enable-kernel=3.2 \
 --enable-stack-protector=strong \
 --disable-werror \
 libc_cv_slibdir=/tools/lib

make -j${jobs}
make -j${jobs} DESTDIR="$rootdir" install

cleanup()
{
    cd -- "$TMPDIR" && rm -rf glibc-${version} glibc-build
}
