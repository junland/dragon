version=4.2.1

rm -rf -- "${TMPDIR}/make-${version}"
untar "${worktree}/sources/make-${version}.tar.bz2" "$TMPDIR"

# Build instructions
cd -- "${TMPDIR}/make-${version}"

# Import and export toolchain variables
. "${worktree}/stages/env.d/cross-staticenv"

./configure \
AR="$AR" AS="$AS" LD="$LD" RANLIB="$RANLIB" READELF="$READELF" STRIP="$STRIP" \
CC="$BTCC" CXX="$BTCXX" \
CFLAGS="$BTCFLAGS" CXXFLAGS="$BTCXXFLAGS" LDFLAGS="$BTLDFLAGS" \
 --prefix=/tools \
 --build=$host \
 --host=$target \
 --disable-nls \
 --without-guile

make -j${jobs}
make -j${jobs} install

# Unset some imported variables from file
unset AR AS LD RANLIB READELF STRIP

cleanup()
{
    cd -- "$TMPDIR" && rm -rf make-*
}

