version=0.2.0

rm -rf -- "${TMPDIR}/gettext-tiny-${version}"
untar "${worktree}/sources/gettext-tiny-${version}.tar.xz" "$TMPDIR"

# Build instructions
cd -- "${TMPDIR}/gettext-tiny-${version}"

# Import and export toolchain variables
. "${worktree}/stages/env.d/cross-staticenv"

make \
 CC="$BTCC" AR="$AR" RANLIB="$RANLIB" CFLAGS="$BTCFLAGS" LDFLAGS="$BTLDFLAGS" \
 prefix=/tools install

# Unset some imported variables from file
unset AR AS LD RANLIB READELF STRIP

cleanup()
{
    cd -- "$TMPDIR" && rm -rf gettext-*
}

