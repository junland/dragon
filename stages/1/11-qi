echo "Making Qi from ${CWD}/qi ..."

cd -- "${CWD}/qi"

make clean

./configure --prefix=/tools

make
make install

# Clean up the source repository
rm -f config.mak
make clean

# Copy our custom qirc to /tools
cp -f "${worktree}/archive/qi/qirc" /tools/etc/

# Include additional settings from targets/ dir
cat << EOF >> /tools/etc/qirc

# Multilib options
multilib_options=$multilib_options

# lib<equal> suffix (multilib)
libSuffix=$libSuffix

# GCC (arch-specific) options
gcc_options=$gcc_options
EOF

