version=2.39.20221117.88ac930a725

cd -- "$TMPDIR"
rm -rf binutils-${version}
unpack "${worktree}/sources/binutils-${version}.tar.lz"

# Build instructions
cd binutils-${version}

# Apply patches from Fedora (Nick Clifton)

patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-version.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-export-demangle.h.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-no-config-h-check.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-filename-in-error-messages.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-revert-PLT-elision.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-readelf-other-sym-info.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-2.27-aarch64-ifunc.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-do-not-link-with-static-libstdc++.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-special-sections-in-groups.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-fix-testsuite-failures.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-gold-mismatched-section-flags.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-gold-warn-unsupported.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-testsuite-fixes.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-gold-i386-gnu-property-notes.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-autoconf-version.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-libtool-no-rpath.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-package-metadata.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-CVE-38128-dwarf-abbrev-parsing.patch"
patch -Np1 -i "${worktree}/patches/binutils/2.39/binutils-readelf-no-sections.patch"

# Build in a separate directory
rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

../binutils-${version}/configure \
AR="ar" AS="as" CC="$BTCC" CXX="$BTCXX" \
CFLAGS="$BTCFLAGS" CXXFLAGS="$BTCXXFLAGS" LDFLAGS="$BTLDFLAGS" \
 --prefix="$crossdir" \
 --libdir="${crossdir}/lib${libSuffix}" \
 --host=$host \
 --target=$target \
 --enable-deterministic-archives \
 --enable-separate-code \
 --disable-compressed-debug-sections \
 --disable-generate-build-notes \
 --disable-gprofng \
 --disable-werror \
 --disable-nls \
 --disable-ppl-version-check \
 --disable-cloog-version-check \
 --with-sysroot="${crossdir}/$target" \
 $multilib_options

make -j${jobs} V=1 MAKEINFO="true"
make -j${jobs} V=1 MAKEINFO="true" install

cd -- "$TMPDIR"

cleanup()
{
    rm -rf binutils-${version} binutils-build
}

