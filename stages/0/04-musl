version=c00cdefa1da17f60b3179704528582ef320e61b8

cd -- "$TMPDIR"
rm -rf musl-${version}
unpack "${worktree}/sources/musl-${version}.tar.gz"

# Build instructions
cd musl-${version}

./configure CC="${target}-gcc" CROSS_COMPILE="${target}-" \
 --prefix= \
 --syslibdir=/lib \
 --enable-debug \
 --enable-optimize

make -j${jobs}
make -j${jobs} DESTDIR="${crossdir}/$target" install

cleanup()
{
    cd -- "$TMPDIR" && rm -rf musl-${version}
}

