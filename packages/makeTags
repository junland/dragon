# limitations under the License.

getSize()
{
    lzip_output="$(plzip -tvvv $1 2>&1)"

    # To obtain the uncompressed, compressed size
    echo $lzip_output | sed -n -e 's/^.*saved. //p'

    unset lzip_output
}

set -e
umask 022

echo "Deleting any previous (.tmp) tagfile ..."
find . -type f -name 'tagfile*' -exec rm -f '{}' +

for meta in $(find . -type f -name '*.tlz.txt' -print)
do
    test -f "$meta" || continue

    # Ignore some package names
    case $meta in
    *_pass?*)
        echo "    ${meta}: Ignored."
        continue;
        ;;
    esac

    directory=$(dirname -- "$meta")

    # Determine output level for the tagfile for
    # those series with sub-directories
    case $directory in
    */modules/* | */xorg/*)
        output_level=../
        ;;
    esac

    category="${directory##*/}"

    echo "Extracting information from $meta ..."
    . $meta
    (
        cd -- "$directory"
        echo "    Adding information to tagfile.${category}.tmp"
        echo "${category}/${pkgname}:${blurb}:ON:#${pkgversion} [$(getSize $(basename -- "${meta%.txt}"))]" \
         >> "${output_level}tagfile.${category}.tmp"
    )
    unset output_level
done

echo "Sorting and removing temporaries tagfile(s) ..."
for tagfile in ./*/*/tagfile.*.tmp
do
    LC_COLLATE=C sort -- "$tagfile" > "${tagfile%.tmp}"
    rm -f -- "$tagfile";			# Delete temporary tagfile.
done

echo "All done."

