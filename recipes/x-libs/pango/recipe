program=pango
version=1.42.1
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/pango/1.42/$tarname

description="
A library for layout and rendering of text.

Pango can be used anywhere that text layout is needed; however, most of
the work on Pango was done using the GTK+ widget toolkit as a test
platform.  Pango forms the core of text and font handling for GTK+-2.
"

homepage=http://www.pango.org/Introduction/
license=LGPLv2+

# Copy documentation
docs="AUTHORS COPYING HACKING MAINTAINERS NEWS README THANKS"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir -p build
    cd build

    CFLAGS="$QICFLAGS" CXXFLAGS="$QICXXFLAGS" LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --mandir $mandir \
     --buildtype=release \
     --strip \
     ..

    ninja
    DESTDIR="$destdir" ninja install

    cd ..

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi
}

