program=gnome-icon-theme-symbolic
version=3.12.0
arch=noarch
release=1

# Define hash tag to categorize the package name output
pkghashtag=x-libs

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch="http://ftp.gnome.org/pub/gnome/sources/gnome-icon-theme-symbolic/${version%.*}/$tarname"

description="
The GNOME icon theme (symbolic).

The gnome-icon-theme-symbolic package contains
symbolic icons for the default GNOME icon theme.
"

homepage=http://www.gnome.org
license="CC-BY-SA 3.0"

# Source documentation
docs="AUTHORS COPYING NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure $configure_args --docdir=$docsdir

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"/
    chmod 644 "${destdir}${docsdir}"/*
}

