# Exit immediately on any error
set -e

program=libxklavier
version=5.4
release=1

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=https://people.freedesktop.org/~svu/$tarname

description="
API for the X Keyboard Extension.

Libxklavier is a library providing high-level API for the
X Keyboard Extension known as XKB.
"

homepage=https://www.freedesktop.org/software/libxklavier
license=LGPLv2+

docs="AUTHORS COPYING* CREDITS ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --enable-static=no \
     --enable-shared=yes \
     --enable-introspection=yes \
     --enable-vala=yes \
     --enable-xmodmap-support

    make -j${jobs} V=1
    make -j${jobs} V=1 DESTDIR="$destdir" install-strip

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

