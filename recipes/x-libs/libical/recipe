program=libical
version=3.0.6
release=2

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://github.com/libical/libical/releases/download/v${version}/$tarname

description="
Libical is an implementation of the iCalendar protocols.

The libical package contains an implementation of the iCalendar
protocols and data formats.
"

homepage=http://github.com/libical/libical
license="MPLv2.0, LGPLv2.1"

# Source documentation
docs="AUTHORS COPYING LICENSE* ReadMe.txt ReleaseNotes.txt TEST THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir BUILD
    cd BUILD

    cmake \
     -DCMAKE_C_FLAGS_RELEASE:STRING="$QICFLAGS"       \
     -DCMAKE_CXX_FLAGS_RELEASE:STRING="$QICXXFLAGS"   \
     -DCMAKE_EXE_LINKER_FLAGS:STRING="$QILDFLAGS"     \
     -DCMAKE_SHARED_LINKER_FLAGS:STRING="$QILDFLAGS"  \
     -DCMAKE_INSTALL_PREFIX=/usr                      \
     -DCMAKE_INSTALL_MANDIR=$mandir                   \
     -DCMAKE_INSTALL_DOCDIR=$docsdir                  \
     -DCMAKE_BUILD_TYPE=Release                       \
     -DCMAKE_VERBOSE_MAKEFILE=ON                      \
     -DSHARED_ONLY=yes                                \
     -DICAL_BUILD_DOCS=false                          \
     -DGOBJECT_INTROSPECTION=true                     \
     -DICAL_GLIB_VAPI=true                            \
     ..

    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    cd ..

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

