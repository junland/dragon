# Exit immediately on any error
set -e

program=exiv2
version=0.27.5
release=1

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}-Source.tar.gz

# Remote source(s)
fetch=https://github.com/Exiv2/exiv2/releases/download/v${version}/$tarname

description="
Exif, IPTC & XMP metadata and ICC Profile.

Exiv2 is a Cross-platform C++ library and a command line utility to manage
image metadata.  It provides fast and easy read and write access to the
Exif, IPTC and XMP metadata and the ICC Profile embedded within digital
images in various formats.  Exiv2 is available as free software and is
used in many projects including KDE and Gnome Desktops as well as many
applications including GIMP, darktable, shotwell, GwenView and Luminance
HDR.
"

homepage=https://exiv2.org/index.html
license=GPLv2+

# Source documentation
docs="AUTHORS *_GUIDELINES.md CONTRIBUTING.md COPYING README* SECURITY.md WORK-IN-PROGRESS"
docsdir="${docdir}/${program}-${version}"

# The source has a custom directory name
srcdir=${program}-${version}-Source

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf BUILD
    mkdir BUILD
    cd BUILD

    cmake -DCMAKE_BUILD_TYPE=Release \
     -DCMAKE_CXX_FLAGS="$QICXXFLAGS"                                       \
     -DCMAKE_EXE_LINKER_FLAGS="$QILDFLAGS"                                 \
     -DCMAKE_SHARED_LINKER_FLAGS="$QILDFLAGS"                              \
     -DCMAKE_STATIC_LINKER_FLAGS="$QILDFLAGS"                              \
     -DCMAKE_INSTALL_PREFIX=/usr                                           \
     -DCMAKE_INSTALL_LIBDIR=lib${libSuffix}                                \
     -DCMAKE_INSTALL_MANDIR=$mandir                                        \
     -DCMAKE_INSTALL_DOCDIR=$docsdir                                       \
     -DEXIV2_ENABLE_NLS=ON                                                 \
     -DEXIV2_ENABLE_VIDEO=ON                                               \
     -DEXIV2_ENABLE_WEBREADY=ON                                            \
     -DEXIV2_ENABLE_CURL=ON                                                \
     -DEXIV2_ENABLE_BMFF=ON                                                \
     -DBUILD_WITH_CCACHE=ON                                                \
     -G Ninja ..

    ninja -j${jobs}
    DESTDIR="$destdir" ninja -j${jobs} install

    # Switch back to the main source directory
    cd ..

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

