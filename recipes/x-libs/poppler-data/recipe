# Exit immediately on any error
set -e

program=poppler-data
version=0.4.11
arch=noarch
release=1

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://poppler.freedesktop.org/$tarname

description="
Encoding data for poppler.

This package contains encoding files for use with poppler.
"

homepage=https://poppler.freedesktop.org/
license="GPLv2+, MIT | BSD 3-clause"

# Source documentation
docs="COPYING* README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    make -j${jobs} prefix=/usr DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

