program=gdk-pixbuf
version=2.38.2
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/x-libs"

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.38/$tarname

description="
An image loading library.

The library provides image loading and saving facilities, fast scaling
and compositing of pixbufs, simple animation loading (i.e.
animated GIFs), and rendering the libart image buffer.
"

homepage=http://developer.gnome.org/gdk-pixbuf/stable/
license=LGPLv2+

# Source documentation
docs="COPYING NEWS"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir -p build
    cd build

    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --mandir $mandir \
     --buildtype=release \
     --strip \
     -Dman=true \
     -Dx11=true \
     -Djasper=true \
     ..

    ninja
    DESTDIR="$destdir" ninja install

    cd ..

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

