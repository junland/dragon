program=gtk+
version=2.24.32
release=2

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/x-libs"

# Difference package name with other series
pkgname=gtk+2

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/$tarname

description="
A multi-platform toolkit for creating graphical user interfaces.

Offering a complete set of widgets, GTK+ is suitable for projects
ranging from small one-off projects to complete application suites.
"

homepage=http://www.gtk.org
license=GPLv2+

# Copy documentation
docs="AUTHORS COPYING NEWS README* HACKING"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --enable-static=no \
     --enable-shared=yes \
     --enable-introspection=yes \
     --enable-xkb=yes \
     --with-xinput=yes \
     --disable-man \
     --disable-gtk-doc \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1 \
     RUN_QUERY_IMMODULES_TEST=false RUN_QUERY_LOADER_TEST=false

    make -j${jobs} \
     RUN_QUERY_IMMODULES_TEST=false RUN_QUERY_LOADER_TEST=false \
     DESTDIR="$destdir" install-strip

    # Add a basic configuration
cat << EOF > "${destdir}/etc/gtk-2.0/gtkrc"
gtk-icon-theme-name = "hicolor"

EOF

    # Manage dot new file(s) via graft(8)
    touch "${destdir}/etc/gtk-2.0/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

