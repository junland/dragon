program=gtk+
version=2.24.32
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/x-libs"

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/$tarname

description="
A multi-platform toolkit for creating graphical user interfaces.

Offering a complete set of widgets, GTK+ is suitable for
projects ranging from small one-off projects to complete application
suites.
"

homepage=https://www.gtk.org/
license=GPLv2

# Copy documentation
docs="AUTHORS COPYING NEWS NEWS.pre-1-0 README.commits README HACKING INSTALL"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"
    
    cd "$srcdir"
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=$mandir \
    --infodir=$infodir \
    --disable-static \
    --disable-papi \
    --enable-introspection \
    --disable-silent-rules \
    --disable-gtk-doc \
    --enable-man=no \
    --with-xinput=yes \
    --build="$(cc -dumpmachine)"
    
    gdk-pixbuf-query-loader > /usr/lib/gdk-pixbuf2.0/2.10.0/loaders.cache
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # Basic configuration
    cat $CWD/gtkrc > ~/gtkrc-2.0
	    
    # Make configuration global
    mkdir -vp /etc/gtk-2.0
    cat $CWD/gtkrc > /etc/gtk-2.0/gtkrc

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi
    
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do
	cp -p $file "${destdir}${docsdir}"
    done
}
