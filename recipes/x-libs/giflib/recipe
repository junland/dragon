# Exit immediately on any error
set -e

program=giflib
version=5.2.1
release=3

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://downloads.sourceforge.net/project/giflib/$tarname

description="
Main library for reading and writing GIF files.

The giflib package contains libraries for reading and writing GIFs
as well as programs for converting and working with GIF files.
"

homepage=http://giflib.sourceforge.net/
license="MIT Expat variant"

docs="COPYING ChangeLog NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

# Limit parallel jobs to '1' for this build
jobs=1

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches from Debian (Thanks!)
    while read -r line
    do
        patch -p1 < "${worktree}/patches/giflib/${line}"
    done < "${worktree}/patches/giflib/series"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    make -j${jobs} V=1 CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS -fPIC" LDFLAGS="$QILDFLAGS"
    make -j${jobs} PREFIX=/usr LIBDIR=/usr/lib${libSuffix} \
                   DESTDIR="$destdir" install

    # Comment the following line if you want to preserve the static lib
    rm -f "${destdir}/usr/lib${libSuffix}/libgif.a"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

