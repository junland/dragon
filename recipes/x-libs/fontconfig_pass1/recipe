program=fontconfig
version=2.13.0
release=2

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://www.freedesktop.org/software/fontconfig/release/$tarname

description="
Temporary installation of fontconfig.

This is a temporary installation to satisfy the requirements of Xorg.
Later, this will be replaced with the fully \"fontconfig\" package.
"

build() {
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Make sure the system regenerates src/fcobjshash.h (Thanks to BLFS!)
    rm -f src/fcobjshash.h

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --libdir=/usr/lib${libSuffix} \
    --sysconfdir=${TMPDIR}/fontconfig_installed/etc \
    --mandir=${TMPDIR}/fontconfig_installed/man \
    --docdir=${TMPDIR}/fontconfig_installed/doc \
    --disable-static \
    --enable-shared \
    --disable-docs \
    --build="$(cc -dumpmachine)"

    make -j${jobs} V=0 && make -j${jobs} install-strip
    rm -rf -- "${TMPDIR}/fontconfig_installed"
}

