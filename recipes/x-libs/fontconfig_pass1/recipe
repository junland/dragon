# Exit immediately on any error
set -e

program=fontconfig
version=2.13.1
release=2

# Define a category for the output of the package name
pkgcategory=x-libs

pkgname=fontconfig_pass1

description="
Temporary installation of fontconfig.

This is a temporary installation to satisfy the requirements of Xorg.
Later, this will be replaced with the fully \"fontconfig\" package.
"

homepage=http://www.freedesktop.org/wiki/Software/fontconfig/
license=Custom

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://www.freedesktop.org/software/fontconfig/release/$tarname

# Source documentation
docsdir="${docdir}/${pkgname}-${version}"

build() {
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Make sure the system regenerates src/fcobjshash.h (Thanks to BLFS!)
    rm -f src/fcobjshash.h

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --disable-static \
     --enable-shared \
     --disable-docs \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress manual pages
    if [ -d "${destdir}/$mandir" ] ; then
	(
            cd "${destdir}/$mandir"
	    find . -type f -exec lzip -9 {} +
	    find . -type l | while read -r file
	    do
		ln -sf "$(readlink -- "$file").lz" "${file}.lz"
		rm -- "$file"
	    done
	)
    fi
}

