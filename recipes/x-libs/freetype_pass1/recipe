program=freetype
version=2.9
release=3

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://download.savannah.gnu.org/releases/freetype/$tarname

description="
Temporary installation of freetype.

This is a temporary installation to satisfy the requirements of Xorg.
Later, this will be replaced with the fully \"freetype\" package.
"

build() {
    if test -d "${packagedir}/$full_pkgname"
    then
        echo "A previous installation of freetype has been detected:" 1>&2
        echo "${packagedir}/$full_pkgname" 1>&2
        exit 1; 
    fi

    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --libdir=/usr/lib${libSuffix} \
    --mandir=${TMPDIR}/freetype_installed/man \
    --docdir=${TMPDIR}/freetype_installed/doc \
    --disable-static \
    --enable-shared \
    --with-bzip2=yes \
    --with-zlib=yes \
    --with-png=yes \
    --with-harfbuzz=no \
    --build="$(cc -dumpmachine)"

    make -j${jobs} V=0 && make -j${jobs} install
    rm -rf -- "${TMPDIR}/freetype_installed"
}

