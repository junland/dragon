# Exit immediately on any error
set -e

program=gnome-icon-theme
version=3.12.0
arch=noarch
release=1

# Define a category for the output of the package name
pkgcategory=x-libs

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch="https://ftp.gnome.org/pub/gnome/sources/gnome-icon-theme/${version%.*}/$tarname"

description="
The GNOME icon theme.

The gnome-icon-theme package contains an assortment of
non-scalable icons of different sizes and themes.
"

homepage=https://www.gnome.org
license="LGPLv3+, CC-BY-SA 3.0"

# Source documentation
docs="AUTHORS COPYING* NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure $configure_args --docdir=$docsdir --disable-nls

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"/
    chmod 644 "${destdir}${docsdir}"/*
}

