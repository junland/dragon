program=cmake
version=3.11.4
release=1

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://cmake.org/files/v3.11/$tarname

description="
Cross-platform make system.

CMake is a family of tools designed to build, test and package
software.  CMake is used to control the software compilation process
using simple platform and compiler independent configuration files.
"

homepage=http://www.cmake.org
license=Custom

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Apply fixes in order to build Cmake
    patch -p1 < "${worktree}/patches/cmake/cmake-3.11.4-libuv-1.21.patch"

    CFLAGS="$QICFLAGS" CXXFLAGS="$QICXXFLAGS" LDFLAGS="$QILDFLAGS" \
    ./bootstrap \
     --prefix=/usr \
     --docdir=/share/doc/${program}-${version} \
     --system-libs \
     --no-system-jsoncpp \
     --no-system-librhash \
     --no-system-libarchive \
     --parallel=$jobs

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install
}

