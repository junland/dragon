program=flex
version=2.6.4
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/devel"

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch=http://github.com/westes/flex/releases/download/v${version}/$tarname

description="
The fast lexical analyser generator.

Flex is a fast lexical analyser generator.  It is a tool for
generating programs that perform pattern-matching on text.
"

homepage=http://flex.sourceforge.net
license=Custom

# Source documentation.
#
# The documentation files are installed by Flex.
#
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static \
     --enable-shared \
     --enable-nls \
     --build="$(cc -dumpmachine)"

    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress man pages
    lzip -9 "${destdir}/${mandir}"/man?/*

    # Provide compatibility with flex's predecessor, lex
    if test -f "${worktree}/archive/flex/usr/bin/lex"
    then
        cp -p "${worktree}/archive/flex/usr/bin/lex" \
              "${destdir}/usr/bin"
        chmod 755 "${destdir}/usr/bin/lex"

        ln -sf libfl.a "${destdir}/usr/lib${libSuffix}/libl.a"
    fi
}

