# Exit immediately on any error
set -e

program=bc
version=3.2.6
release=1

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://github.com/gavinhoward/bc/releases/download/${version}/$tarname

description="
An arbitrary precision numeric processing language.

Bc is an arbitrary precision numeric processing language.  Syntax is
similar to C, but differs in many substantial areas.  It supports
interactive execution of statements.

This is the version of bc maintained by Gavid D. Howard.
"

homepage=http://github.com/gavinhoward/bc
license="BSD, Custom"

# Source documentation
docs="LICENSE.md NEWS.md NOTICE.md README.md"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    env CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS -O3" LDFLAGS="$QILDFLAGS -static" \
    sh ./configure.sh \
     --prefix=/usr \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --disable-generated-tests \
     --disable-strip

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

