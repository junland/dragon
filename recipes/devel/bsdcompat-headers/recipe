# Exit immediately on any error
set -e

program=bsdcompat-headers
version=0.7.2
release=1

# Define a category for the output of the package name
pkgcategory=devel

description="
BSD compatibility headers.

This meta package includes the following headers:
sgidefs.h, cdefs.h, queue.h, tree.h.
"

homepage=https://www.dragora.org
license=BSD

build()
{
    mkdir -p "${destdir}/usr/include/sys"

    for name in cdefs.h queue.h tree.h
    do
        cp -p "${worktree}/archive/bsdcompat-headers/${name}" \
              "${destdir}/usr/include/sys"
        chmod 644 "${destdir}/usr/include/sys/${name}"
    done

    cp -p "${worktree}/archive/bsdcompat-headers/sgidefs.h" \
          "${destdir}"/usr/include/
    chmod 644 "${destdir}/usr/include/sgidefs.h"
}

