# Exit immediately on any error
set -e

program=libtool
version=2.4.6
release=2

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=ftp://ftp.gnu.org/gnu/libtool/$tarname

description="
The GNU portable library tool.

GNU libtool is a generic library support script.  Libtool hides
the complexity of using shared libraries behind a consistent,
portable interface.
"

homepage=https://www.gnu.org/software/libtool
license="GPLv2+, GPLv3+, LGPLv2.1"

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README THANKS TODO libltdl/COPYING.LIB"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Update this software version using the following
    # patches from Fedora (Thank you!)

    patch -Np1 -i "${worktree}/patches/libtool/libtool-2.4.6-am-1.16-test.patch"
    patch -Np1 -i "${worktree}/patches/libtool/libtool-2.4.6-fatal-handler.patch"
    patch -Np1 -i "${worktree}/patches/libtool/libtool-2.4.6-hardening.patch"
    patch -Np1 -i "${worktree}/patches/libtool/libtool-2.4.6-specs.patch"
    patch -Np1 -i "${worktree}/patches/libtool/libtool-nodocs.patch"

    ./configure CPPFLAGS="$QICPPFLAGS" CFLAGS="" LDFLAGS="" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1 \
     CUSTOM_LTDL_CFLAGS="$QICFLAGS" \
     CUSTOM_LTDL_LDFLAGS="$QILDFLAGS"

    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

