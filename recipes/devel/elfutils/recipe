# Exit immediately on any error
set -e

program=elfutils
version=0.188
release=1

# Define a category for the output of the package name
pkgcategory=devel

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=https://sourceware.org/elfutils/ftp/${version}/$tarname

description="
Libraries and utilities to handle ELF objects.

elfutils is a collection of utilities and libraries to read,
create and modify ELF binary files, find and handle DWARF
debug data, symbols, thread state and stacktraces for
processes and core files on GNU/Linux.

Note: This package has been configured to make use of the \"eu\"
      prefix for elfutils utilities.
"

homepage=https://sourceware.org/elfutils/
license="GPLv2+, GPLv3+, LGPLv3"

# Source documentation
docs="AUTHORS CONTRIBUTING COPYING* src/ChangeLog NEWS NOTES README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Apply patches against Musl (Thanks to "noname-linux", xhebox)
    # Url: https://github.com/xhebox/noname-linux/tree/master/ports/elfutils
    patch -Np1 -i "${worktree}/patches/elfutils/fix-uninitialized.patch"
    patch -Np1 -i "${worktree}/patches/elfutils/musl-asm-ptrace-h.patch"
    patch -Np0 -i "${worktree}/patches/elfutils/musl-macros.patch"
    patch -Np0 -i "${worktree}/patches/elfutils/musl-strndupa.patch"

    cp -p -f "${worktree}"/archive/elfutils/error.h lib/
    cp -p -f "${worktree}"/archive/elfutils/error.h src/
    sed -i 's:-Werror::' ./*Makefile.in
    autoreconf -vif

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS -Wno-error=null-dereference" \
    LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --docdir=$docsdir \
     --mandir=$mandir \
     --enable-deterministic-archives \
     --disable-debuginfod \
     --enable-libdebuginfod=dummy \
     --program-prefix=eu- \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} V=1 DESTDIR="$destdir" install-strip

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

