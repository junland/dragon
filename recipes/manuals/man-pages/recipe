# Exit immediately on any error
set -e

program=man-pages
version=5.13
arch=noarch
release=1

# Define a category for the output of the package name
pkgcategory=manuals

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://git.kernel.org/pub/scm/docs/man-pages/man-pages.git/snapshot/$tarname

description="
Linux man pages Sections 2, 3, 4, 5, and 7.

This package contains Linux man pages for sections 1 through 8.  Some
more information is given in the \"man-pages-${version}.Announce\" file.
"

homepage=https://www.kernel.org/doc/man-pages/index.html
license=Custom

# Source documentation
docs="CONTRIBUTING Changes MAINTAINER_NOTES README *.Announce *.lsm"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    make -j${jobs} prefix=/usr DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    (
        cd "${destdir}/$mandir"
        find . -type f -exec lzip -9 {} +
        find . -type l | while read -r file
        do
            ln -sf "$(readlink -- "$file").lz" "${file}.lz"
            rm -- "$file"
        done
    )

    # Do not include manual pages that belong to
    # other packages, which are considered newer

    echo ""
    echo "Searching for manual pages included in other packages ..."
    echo ""
    for file in "${mandir}"/man?/*
    do
        if test -f "${destdir}/$file"
        then
            echo "Removing pre-existing manual page: $file"
            echo "    Already included from $(realpath $file)."
            echo ""
            rm "${destdir}/$file"
        fi
    done
    unset -v file

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

