program=inetutils
version=1.9.4
release=3

# Define a category for the output of the package name
pkgcategory=networking

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://ftp.gnu.org/gnu/inetutils/$tarname

description="
A collection of common network programs.

The inetutils package contains programs for basic networking.
"

homepage=http://www.gnu.org/software/inetutils
license=GPLv3+

# Source documentation
docs="AUTHORS COPYING NEWS README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Note about `--disable-logger':
    # A better version is provided by the util-linux package

    # Note about `--disable-nls':
    # GNU Inetutils does not seem to provide locale files

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-servers \
     --enable-ncurses \
     --disable-readline \
     --disable-syslogd \
     --disable-logger \
     --disable-rexec \
     --disable-rlogin \
     --disable-rsh \
     --disable-rcp \
     --disable-whois \
     --disable-nls \
     --with-wrap \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Delete bogus file
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"
    rmdir "${destdir}/usr/lib${libSuffix}" || true

    # Install inetd perp service

    mkdir -p "${destdir}/etc/perp/inetd"

    cp -p "${worktree}/archive/inetutils/etc/perp/inetd/rc.log" \
          "${worktree}/archive/inetutils/etc/perp/inetd/rc.main" \
          "${destdir}/etc/perp/inetd/"

    chmod 755 "${destdir}"/etc/perp/inetd/rc.*

    # THIS SERVICE IS DISABLED BY DEFAULT
    chmod -t "${destdir}/etc/perp/inetd"

    # Copy config file for inetd(8)
    cp -p "${worktree}/archive/inetutils/etc/inetd.conf" "${destdir}/etc/"
    chmod 644 "${destdir}/etc/inetd.conf"

    # To handle config file(s)
    touch "${destdir}/etc/.graft-config" \
          "${destdir}/etc/perp/inetd/.graft-config"

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

