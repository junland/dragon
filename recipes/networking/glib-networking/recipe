# Exit immediately on any error
set -e

program=glib-networking
version=2.74.0
release=1

# Define a category for the output of the package name
pkgcategory=networking

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch="https://download.gnome.org/sources/glib-networking/${version%.*}/$tarname"

description="
Network-related giomodules for Glib.

glib-networking contains the implementations of certain GLib networking
features that cannot be implemented directly in GLib itself because of
their dependencies.
"

homepage=https://gitlab.gnome.org/GNOME/glib-networking
license="LGPLv2.1 | LICENSE EXCEPTION FOR OPENSSL"

# Source documentation
docs="COPYING HACKING.md LICENSE_EXCEPTION NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf BUILD
    mkdir BUILD
    cd BUILD

    CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --buildtype=release \
     --strip \
     -Dopenssl=disabled \
     -Dgnutls=enabled \
     -Denvironment_proxy=enabled \
     ..

    ninja -j${jobs}
    DESTDIR="$destdir" ninja -j${jobs} install

    cd ../

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

