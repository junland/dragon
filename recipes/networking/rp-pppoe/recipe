program=rp-pppoe
version=3.13
release=2

# Define hash tag to categorize the package name output
pkghashtag=networking

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dianne.skoll.ca/projects/rp-pppoe/download/$tarname

description="
PPP over Ethernet (xDSL support).

PPPoE (Point-to-Point Protocol over Ethernet) is a protocol used by many
DSL Internet Service Providers. RP-PPPoE is a free PPPoE client, relay
and server for GNU/Linux.
"

homepage=http://dianne.skoll.ca/projects/rp-pppoe/
license=GPLv2+

# Source documentation
docs="README SERVPOET doc/*"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply a patch from "Alpine Linux"
    patch -Np1 -i "${worktree}/patches/rp-pppoe/musl-fix.patch"

    # Apply patches from "Fedora" to make it more reliable
    patch -Np1 -i "${worktree}/patches/rp-pppoe/rp-pppoe-3.12-ip-allocation.patch"
    patch -Np1 -i "${worktree}/patches/rp-pppoe/rp-pppoe-3.12-plugin.patch"
    patch -Np1 -i "${worktree}/patches/rp-pppoe/rp-pppoe-3.12-pluginpath.patch"
    patch -Np1 -i "${worktree}/patches/rp-pppoe/rp-pppoe-manpages.patch"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    cd src

    ./configure CFLAGS="$QICFLAGS -D_GNU_SOURCE -fno-strict-aliasing" \
    LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-plugin \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1 PLUGIN_DIR="/usr/libexec/rp-pppoe" all rp-pppoe.so
    make -j${jobs} PLUGIN_DIR="/usr/libexec/rp-pppoe" DESTDIR="$destdir" install

    cd ..

    # To manage .new configs via graft(1)
    touch "${destdir}/etc/ppp/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

