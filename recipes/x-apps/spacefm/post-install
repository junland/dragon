chroot "$rootdir" /usr/bin/gtk-update-icon-cache -q -f -i usr/share/icons/hicolor

echo "Updating ICON cache: gtk-update-icon-cache -q -t -f -i usr/share/icons/Faenza"
chroot "$rootdir" /usr/bin/gtk-update-icon-cache -q -t -f -i usr/share/icons/Faenza

