program=icewm
version=1.4.2
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/x-apps"

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://github.com/bbidulock/icewm/releases/download/1.4.2/"$tarname"

description="
IceWm is a Window Manager for X Window System.

The goal of IceWM is speed, simplicity, and not getting in the userâ€™s way.
"

homepage=http://ice-wm.org/
license="GLPLv2"

# Source documentation
docs="AUTHORS ChangeLog COPYING NEWS README.md"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    patch -Np0 -i ${worktree}/patches/icewm/fix-strlcat_strlcpy.patch
    patch -Np0 -i ${worktree}/patches/icewm/musl.patch

    ./configure  CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
 
    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}/"
}


