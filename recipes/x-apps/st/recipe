# Exit immediately on any error
set -e

program=st
version=0.8.2
release=1

# Define a category for the output of the package name
pkgcategory=x-apps

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dl.suckless.org/st/$tarname

description="
st is a simple terminal implementation for X.

st supports:
*   most VT10X escape sequences
*    serial line support
*    XIM support
*    utmp via utmp(1)
*    clipboard handling
*    mouse and keyboard shortcuts (via config.h)
*    UTF-8
*    wide-character support
*    resize
*    256 colors and true colors
*    antialiased fonts (using fontconfig)
*    fallback fonts
*    line drawing
"

homepage=http://st.suckless.org
license="MIT X Consortium"

# Source documentation
docs="FAQ LEGACY LICENSE README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Avoid conflicts with terminfo database (ncurses)
    sed -i '/tic /d' Makefile

    cat "${worktree}/archive/st/config.mk" > ./config.mk

    make -j${jobs} \
     CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS -std=c99" \
     LDFLAGS="$QILDFLAGS" \
     X11INC=/usr/include/X11 \
     X11LIB=/usr/lib${libSuffix}/X11

    make -j${jobs} PREFIX=/usr DESTDIR="$destdir" install

    lzip -9 "${destdir}/${mandir}/man1/st.1"

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"/
}

