program=eudev
version=3.2.5
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/boot"

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dev.gentoo.org/~blueness/eudev/$tarname

description="
Dynamic device management.

Udev is the device manager for the Linux 2.6 kernel series.
Its primary function is managing device nodes in /dev.

It is the successor of devfs and hotplug, which means that
it handles the /dev directory and all user space actions
when adding/removing devices, including firmware load.

This is a fork of Udev from Gentoo.
"

homepage=http://wiki.gentoo.org/wiki/Eudev
license=GPLv2+

# Source documentation
docs=COPYING
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Get rid of unneeded groups that were added by systemd
    # (Thanks to Slackware Linux)
    sed -i \
     -e 's/GROUP="render", //'  \
     -e 's/GROUP="kvm", //'     \
     rules/50-udev-default.rules

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static \
     --enable-shared \
     --enable-introspection=no \
     --enable-hwdb \
     --enable-manpages \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Make symlink for multipath
    (
        cd "${destdir}/usr/sbin" && \
        ln -sf /usr/lib${libSuffix}/udev/scsi_id .
    )

    # Install perp service for udevd(8)

    mkdir -p "${destdir}/etc/perp/udevd"

    cp -p "${worktree}/archive/eudev/rc.log" \
          "${worktree}/archive/eudev/rc.main" \
          "${destdir}/etc/perp/udevd/"

    chmod 755 "${destdir}"/etc/perp/udevd/rc.*

    # Be an active service by default
    chmod +t "${destdir}/etc/perp/udevd"

    # To handle config file(s)
    touch "${destdir}/etc/perp/udevd/.graft-config" \
          "${destdir}/etc/udev/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

