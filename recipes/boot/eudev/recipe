# Exit immediately on any error
set -e

program=eudev
version=20230218_9bcbc131a
release=1

# Define a category for the output of the package name
pkgcategory=boot

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch="
 https://dragora.mirror.garr.it/current/sources/$tarname
 rsync://rsync.dragora.org/current/sources/$tarname
"
#fetch="
#  https://github.com/eudev-project/eudev/releases/download/v${version}/$tarname
#  https://dev.gentoo.org/~blueness/eudev/$tarname
#"

description="
Dynamic device management.

Udev is the device manager for the Linux 2.6 kernel series.
Its primary function is managing device nodes in /dev.

It is the successor of devfs and hotplug, which means that
it handles the /dev directory and all user space actions
when adding/removing devices, including firmware load.

This is a fork of Udev from Gentoo.
"

homepage=https://wiki.gentoo.org/wiki/Eudev
license=GPLv2+

# Source documentation
docs=COPYING
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # To re-generate source taken from repo
    sh ./autogen.sh

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --with-rootlibexecdir=/lib/udev \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static=no \
     --enable-shared=yes \
     --enable-hwdb \
     --enable-manpages \
     --enable-rule-generator \
     --disable-selinux \
     --build="$(gcc -dumpmachine)"

    # http://github.com/gentoo/eudev/pull/127
    make -j${jobs} V=1 udevhwdbdir=/usr/lib${libSuffix}/udev/hwdb.d
    make -j${jobs} udevhwdbdir=/usr/lib${libSuffix}/udev/hwdb.d \
                   DESTDIR="$destdir" install-strip

    # Insert custom rules

    mkdir -p "${destdir}/etc/udev/rules.d"
    for file in "${worktree}"/archive/eudev/etc/udev/rules.d/*
    do
        install -p -m 644 -o root -g root "$file" "${destdir}/etc/udev/rules.d"
    done

    for file in "${worktree}"/archive/eudev/lib/udev/*
    do
        install -p -m 755 -o root -g root "$file" "${destdir}/usr/lib${libSuffix}/udev"
    done
    unset -v file

    # Install UDEVD perp service

    mkdir -p "${destdir}/etc/perp/udevd"

    cp -p "${worktree}/archive/eudev/etc/perp/rc.log" \
          "${worktree}/archive/eudev/etc/perp/rc.main" \
          "${destdir}/etc/perp/udevd/"

    chmod 755 "${destdir}"/etc/perp/udevd/rc.*

    # Be an active service by default
    chmod +t "${destdir}/etc/perp/udevd"

    # To handle config file(s)
    touch "${destdir}/etc/udev/.graft-config" \
          "${destdir}/etc/perp/udevd/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

