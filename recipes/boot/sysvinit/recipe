program=sysvinit
version=2.93
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/boot"

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://download.savannah.nongnu.org/releases/sysvinit/$tarname

description="
The System V init.

The sysvinit package contains programs for controlling the startup,
running, and shutdown of the system.

System V init was originally written by Miquel van Smoorenburg.
"

homepage=http://savannah.nongnu.org/projects/sysvinit
license=GPLv2+

# Source documentation
docs="COPYING COPYRIGHT README doc/Changelog doc/Propaganda"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Adjust some (rc) script paths
    patch -p0 < "${worktree}/patches/sysvinit/sysvinit-adjust_paths.h.diff"

    # Remove several programs installed by other packages
    patch -p1 < "${worktree}/patches/sysvinit/sysvinit-2.93-dragora_consolidated-1.patch"

    make -j${jobs} CFLAGS="$QICFLAGS" STATIC="-static"
    make -j${jobs} ROOT="$destdir" install

    strip --strip-unneeded "${destdir}/sbin"/* 2> /dev/null || true

    # Remove empty directories
    rmdir "${destdir}/bin" "${destdir}/usr/bin" || true

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"/
}

