# Exit immediately on any error
set -e

program=grub
version=2.06
release=2

# Define a category for the output of the package name
pkgcategory=boot

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://ftp.gnu.org/gnu/grub/$tarname

description="
A multiboot boot loader.

GNU GRUB is a Multiboot boot loader.  It was derived from GRUB,
the GRand Unified Bootloader, which was originally designed and
implemented by Erich Stefan Boleyn.
"

homepage=https://www.gnu.org/software/grub
license=GPLv3+

# Source documentation
docs="AUTHORS BUGS COPYING NEWS README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Add support to detect "/boot/initrd.gz" or "/boot/initrd.lz" images
    patch -Np1 -i "${worktree}/patches/grub/initrd_naming.diff"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-device-mapper \
     --enable-grub-mount \
     --disable-grub-mkfont \
     --disable-werror \
     --disable-liblzma \
     --disable-efiemu \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" \
     bashcompletiondir=/usr/share/bash-completion/completions \
     install-strip

    # Remove generated charset.alias
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"

    # Make required directories
    mkdir -p "${destdir}/boot/grub/" "${destdir}/etc/default"

    # Insert file for default settings
    cp -p "${worktree}/archive/grub/etc/default/grub" "${destdir}/etc/default/"
    chmod 644 "${destdir}/etc/default/grub"

    # Manage config (.new) file(s)
    touch "${destdir}/etc/default/.graft-config" \
          "${destdir}/etc/grub.d/.graft-config" \
          "${destdir}/usr/share/bash-completion/completions/.graft-config"

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

