# Exit immediately on any error
set -e

program=linux
version=5.10.56
release=1

# Define a category for the output of the package name
pkgcategory=kernel

pkgname=kernel-headers

tarname=${program}-libre-${version}-gnu.tar.lz

# Remote source(s)
fetch=https://linux-libre.fsfla.org/pub/linux-libre/releases/${version}-gnu/$tarname

description="
The Linux kernel headers.

The Linux kernel headers from the GNU Linux-libre project.
"

homepage=https://www.gnu.org/software/linux-libre
license="GPLv2 only"

# Limit parallel jobs for the compiler
jobs=1

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    patch -p1 < "${worktree}/patches/linux-headers/revert-broken-uapi.patch"
    patch -p1 < "${worktree}/patches/linux-headers/include-uapi-linux-swab-Fix-potentially-missing-__always_inline.patch"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    make -j${jobs} mrproper
    make -j${jobs} headers

    # Holy molly... the 'headers_install' target cannot be used
    # because it requires rsync(1), which is not available early.

    mkdir -p "${destdir}/usr/include"
    cp -Rp usr/include/* "${destdir}/usr/include/"

    # Remove cruft
    find "${destdir}/usr/include" -name '.*' -exec rm -rf {} +
    rm -f "${destdir}/usr/include/Makefile"
}

