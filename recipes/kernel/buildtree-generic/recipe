# Exit immediately on any error
set -e

program=linux
version=5.16.20
release=2

# Define a category for the output of the package name
pkgcategory=kernel

# Use a custom package name
pkgname=linux-libre-buildtree

description="
The Linux-libre build tree directory.

This is the directory tree as generated for Dragora from the 'kernel/generic'
recipe.  Necessary for later installations of modules as well as drivers that
require it.
"

license="GPLv2 only"

build()
{
    if test "$kernel_generic_has_been_built" != kernel_generic_has_been_built
    then
        warn 'The recipe "kernel/generic" has not been processed, this recipe will not be built.'
        exit 4;
    fi

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Move (build) kernel-tree into package

    mkdir -p "${destdir}/usr/src/${srcdir}"
    mv -f ./* "${destdir}/usr/src/${srcdir}"

    # Unset 'keep_srcdir' and 'kernel_generic_has_been_built'
    # (both exported from "kernel/generic")
    unset -v keep_srcdir kernel_generic_has_been_built
}

