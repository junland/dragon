# Exit immediately on any error
set -e

program=linux
version=5.10.56
release=2

# Define a category for the output of the package name
pkgcategory=kernel

pkgname=kernel-buildtree-generic

description="
The Linux kernel build tree.

This package includes the kernel sources from the build tree
\"as it is\" generated for the 'generic' kernel.
"

license="GPLv2 only"

build()
{
    # Check if 'keep_srcdir' is not empty
    # (theoretically exported from kernel/generic)
    if test -n "$keep_srcdir"
    then
        cd "$srcdir"

        # Set sane permissions
        chmod -R u+w,go-w,a+rX-s .

        # Move (build) kernel-tree into package

        mkdir -p "${destdir}/usr/src/${srcdir}"
        mv -f ./* "${destdir}/usr/src/${srcdir}"

        # Unset 'keep_srcdir' for the next recipe(s)
        unset -v keep_srcdir
    fi
}

