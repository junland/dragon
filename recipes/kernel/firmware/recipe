program=linux-libre-firmware
version=1.3
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/kernel"

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch=http://jxself.org/firmware/$tarname

description="
GNU Linux-libre firmware.

The release of free firmware for use with the kernel Linux-libre.

For more information, see:
http://jxself.org/free-firmware.shtml
"

homepage=http://jxself.org/firmware
license=Custom

# Source documentation
docs="GPL-2 GPL-3 MPL-2 README WHENCE"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Prepare package to copy the firmwares (data)

    mkdir -p "${destdir}/lib/firmware"
    cp -R -p bin/* "${destdir}/lib/firmware/"
    chown -R root:root "${destdir}/lib/firmware/"

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cd src && cp -p $docs "${destdir}${docsdir}"
}

