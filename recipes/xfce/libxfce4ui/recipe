program=libxfce4ui
version=4.13.3
release=1

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://archive.xfce.org/src/xfce/libxfce4ui/4.13/$tarname

description="
The replacement of the old libxfcegui4 library.

It is used to share commonly used Xfce widgets among the Xfce
applications.
"

homepage=http://xfce.org/
license=GPLv2

# Source documentation
docs="AUTHORS COPYING NEWS README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"
    
    cd "$srcdir"
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=$mandir \
    --infodir=$infodir \
    --with-vendor-info=Dragora \
    --disable-static \
    --disable-debug \
    --build="$(cc -dumpmachine)"
    
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install
    
    # Add vendor info in /usr/share/xfce4/vendorinfo
    mkdir -pv "$destdir"/usr/share/xfce4
    cp -p "${worktree}/archive/libxfce4ui/vendorinfo" "$destdir"/usr/share/xfce4/
    chmod 644 "$destdir"/usr/share/xfce4/vendorinfo
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do 
        cp -p $file "${destdir}${docsdir}"
    done
}

