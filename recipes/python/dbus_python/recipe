# Exit immediately on any error
set -e

program=dbus-python
pkgname=dbus_python
version=1.2.16
release=1

# Define a category for the output of the package name
pkgcategory=python

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dbus.freedesktop.org/releases/${program}/$tarname

description="
Python bindings for D-Bus.

dbus_python provides Python bindings to the D-Bus API interface.
"

homepage=http://www.freedesktop.org/wiki/Software/DBusBindings
license="MIT Expat variant"

docs="AUTHORS CONTRIBUTING.md COPYING ChangeLog NEWS PKG-INFO README"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf python3-build
    mkdir python3-build
    cd python3-build
    ../configure PYTHON=/usr/bin/python3 \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --enable-static=no \
     --enable-shared=yes \
     --docdir=$docsdir
    make -j${jobs} V=1
    cd ..
    make -j${jobs} V=1 -C python3-build DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

