program=sgml-common
version=0.6.3
arch=noarch
release=2

# Define hash tag to categorize the package name output
pkghashtag=docbook

tarname=${program}-${version}.tgz

# Remote source(s)
fetch=http://sourceware.org/ftp/docbook-tools/new-trials/SOURCES/$tarname

description="
The SGML common package contains install-catalog.

This is useful for creating and maintaining centralized SGML catalogs.
"

homepage=http://www.docbook.org/xml/
license=GPLv3+

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches and updates from Fedora
    patch -Np1 -i "${worktree}/patches/sgml-common/sgml-common-quotes.patch"
    patch -Np1 -i "${worktree}/patches/sgml-common/sgml-common-umask.patch"
    patch -Np1 -i "${worktree}/patches/sgml-common/sgml-common-xmldir.patch"

    # Apply patch from Beyond Linux From Scratch
    patch -Np1 -i "${worktree}/patches/sgml-common/sgml-common-0.6.3-manpage-1.patch"

    autoreconf -vif

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1 docdir=$docsdir
    make -j${jobs} docdir=$docsdir DESTDIR="$destdir" install

    touch "${destdir}/etc/sgml/.graft-config"

    mkdir -p "${destdir}/usr/share/sgml/sgml-iso-entities-8879.1986"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

