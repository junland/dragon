# Exit immediately on any error
set -e

program=liblouis
version=3.24.0
release=1

# Define a category for the output of the package name
pkgcategory=braille

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/liblouis/liblouis/releases/download/v${version}/$tarname

description="
A Braille translator and back-translator.

The liblouis package suite provides an open-source braille translator,
back-translator and formatter for a large number of languages and
braille codes.  It is a set of libraries designed for use in any of a
number of applications, both free and commercial.

It is written in C so that it does not require a runtime environment
and hence can be used in applications written in high-level languages
such as Java and Python.
"

homepage=http://liblouis.org
license="GPLv3+, LGPLv2.1"

# Source documentation
docs="AUTHORS COPYING* ChangeLog HACKING NEWS README doc/liblouis.html doc/liblouis.txt"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-shared=yes \
     --enable-static=no \
     --enable-ucs4 \
     --without-yaml \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Install Python bindings
    (
        cd python
        python3 setup.py build
        python3 setup.py install --prefix=/usr --root="$destdir" --optimize=1
    )

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

