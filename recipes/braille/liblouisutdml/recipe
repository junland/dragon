# Exit immediately on any error
set -e

program=liblouisutdml
version=2.11.0
release=1

# Define a category for the output of the package name
pkgcategory=braille

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/liblouis/liblouisutdml/releases/download/v${version}/$tarname

description="
A Braille formatter.

Liblouisutdml is an open-source braille formatter.  The formatting can be
configured via a style sheet.  By incorporating Liblouis it provides the
capability of translating any XML or plain text file into properly
transcribed, embosser-ready braille.  This includes translation into
grade two, mathematical codes, etc.
"

homepage=http://liblouis.org
license="GPLv3+, LGPLv3+"

# Source documentation
docs="AUTHORS COPYING* ChangeLog NEWS README doc/liblouisutdml.html doc/liblouisutdml.txt"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-shared=yes \
     --enable-static=no \
     --disable-java-bindings \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

