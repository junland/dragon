program=lua
version=5.3.5
release=2

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://www.lua.org/ftp/${tarname}

description="
lua - powerful lightweight programming language designed for extending applications

Lua is a powerful, efficient, lightweight, embeddable scripting language. It
supports procedural programming, object-oriented programming, functional
programming, data-driven programming, and data description.
"

homepage=https://www.lua.org/
license="MIT License"

# Source documentation
docs="README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    make MYCFLAGS="$CFLAGS -fPIC -DLUA_COMPAT_5_2 -DLUA_COMPAT_5_1" MYLDFLAGS="$LDFLAGS" linux
    make \
      INSTALL_TOP="$destdir"/usr \
      INSTALL_DATA='cp -d' \
      INSTALL_MAN=$mandir \
      install

    # Delete index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        if test -e $file
        then
            cp -p $file "${destdir}${docsdir}"
        fi
    done
}
