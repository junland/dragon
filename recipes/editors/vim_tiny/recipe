# Build recipe for vim (tiny).
#
# Copyright (C) 2016-2017 Matias A. Fonzo, selk@dragora.org.
#
# This recipe is free software: you have unlimited permission
# to copy, distribute and modify it.

program=vim
version=8.0.069
release=1

pkgname=vim_tiny
pkgversion=8.0.0133	# Patch level.

srcdir=vim80

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=ftp://ftp.vim.org/pub/vim/unix/$tarname

homepage=http://www.vim.org

description="
The ubiquitous text editor (tiny version).

Vim is a highly configurable text editor built to make creating and
changing any kind of text very efficient.  It is included as \"vi\"
with most UNIX systems and with Apple OS X.

For more information, visit:  $homepage
"

license=Custom

# Source documentation
docs="CONTRIBUTING.md README.md"
docsdir="${docdir}/${pkgname}-${pkgversion}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd $srcdir

    # Apply patches from upstream
    for file in "${worktree}"/patches/vim/?.?.*
    do
        if test -f "$file"
        then
            cat "$file" | { patch -Np0 || patch -Np1 ; }
        fi
    done

    # Workaround for the special 'srcdir' variable, it is internally
    # imported and exported from vim's ./configure
    saved_srcdir=$srcdir
    unset srcdir

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-gui=no \
     --enable-multibyte \
     --disable-netbeans \
     --disable-gtktest \
     --disable-icon-cache-update \
     --disable-desktop-database-update \
     --with-features=tiny \
     --with-compiledby="Dragora GNU/Linux-Libre" \
     --without-x \
     --build="$(cc -dumpmachine)"

    # Restore 'srcdir'
    srcdir=$saved_srcdir
    unset saved_srcdir

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Do not include this for our "tiny" package
    rm -rf "${destdir}/usr/share/applications" \
           "${destdir}/usr/share/icons"

    # Add wrappers script from Dragora for compatibility mode (vi)
    cp -f "${worktree}/archive/vim/usr/bin/vi" \
          "${destdir}/usr/bin"
    chmod 755 "${destdir}/usr/bin/vi"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

