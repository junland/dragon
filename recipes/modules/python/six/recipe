program=six
version=1.11.0
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/modules/python"

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://files.pythonhosted.org/packages/16/d8/bc6316cf98419719bd59c91742194c111b6f2e85abac88e496adefaf7afe/$tarname

description="
A Python 2 and 3 compatibility library.

It provides utility functions for smoothing over the differences
between the Python versions with the goal of writing Python code
that is compatible on both Python versions.
"

homepage=http://pypi.python.org/pypi/six/
license=MIT

docs="CHANGES LICENSE PKG-INFO README.rst"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Install for both, Python versions 2 and 3

    for i in 2 3
    do
        python${i} setup.py build
        python${i} setup.py install --prefix=/usr --root="$destdir" --optimize=1
    done
    unset i

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

