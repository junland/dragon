# to copy, distribute and modify it.

program=acl
version=38f32ea1865bcc44185f4118fde469cb962cff68-rebase
pkgversion=38f32ea
release=1

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch=http://rsync.dragora.org/v3/sources/$tarname

description="
Access Control Lists.

The POSIX Access Control Lists, are used to define more fine-grained
discretionary access rights for files and directories.
"

homepage=http://savannah.nongnu.org/projects/acl
license="GPLv2+, LGPLv2.1"

# Source documentation
docs="README doc/CHANGES doc/COPYING* doc/TODO"
docsdir="${docdir}/${program}-${pkgversion}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

