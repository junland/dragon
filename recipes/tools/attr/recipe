program=attr
version=2.4.48
release=1

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://git.savannah.nongnu.org/cgit/attr.git/snapshot/$tarname

description="
Extended attributes.

The extended attributes are name:value pairs associated
permanently with files and directories.

For more information, type: \"man 5 attr\".
"

homepage=http://savannah.nongnu.org/projects/attr
license="GPLv2+, LGPLv2.1"

# Source documentation
docs="README doc/CHANGES doc/COPYING*"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches from upstream
    patch -p1 < "${worktree}/patches/attr/406eab7aa09da9df787a964d3c152c0bda6e23c4"
    patch -p1 < "${worktree}/patches/attr/0322a5cb31a65cb18f15451c170a5ee263f69a15"
    patch -p1 < "${worktree}/patches/attr/e007449435391c540f1e1917fe95b258ea3bcc86"
    patch -p1 < "${worktree}/patches/attr/fd1d8ee21df8d11460baa858ae5c5d20e38fb70e"
    patch -p1 < "${worktree}/patches/attr/fcb34db768e0312cfdfdc8a2f4ae9950fa3f8d63"

    ./autogen.sh

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # To handle config file(s)
    touch "${destdir}/etc/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}/"
}

