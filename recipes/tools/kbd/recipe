program=kbd
version=2.0.4
release=1

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://kbd-project.org/download/$tarname

description="
Keyboard utilities for GNU/Linux.

The kbd package contains key-table files and keyboard utilities.
"

homepage=http://kbd-project.org
license=GPLv2+

# Source documentation
docs="AUTHORS COPYING CREDITS ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Fix inconsistent behaviour of Backspace and Delete keys
    # for i386 keymaps (Thanks to "Linux From Scratch")
    patch -Np1 -i "${worktree}/patches/kbd/kbd-2.0.4-backspace-1.patch"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --disable-vlock \
     --enable-optional-progs \
     --enable-nls \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

