# Exit immediately on any error
set -e

program=kbd
version=2.4.0
release=1

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://mirrors.edge.kernel.org/pub/linux/utils/kbd/$tarname

description="
Keyboard utilities for GNU/Linux.

The kbd package contains key-table files and keyboard utilities.
"

homepage=http://kbd-project.org
license=GPLv2+

# Source documentation
docs="AUTHORS COPYING CREDITS ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Fix inconsistent behaviour of Backspace and Delete keys
    # for i386 keymaps (Thanks to "Linux From Scratch")
    patch -Np1 -i "${worktree}/patches/kbd/kbd-2.4.0-backspace-1.patch"

    # Remove the redundant resizecons program (it requires the defunct
    # svgalib to provide the video mode files - for normal use setfont
    # sizes the console appropriately) together with its manpage.
    # (Thanks again to "Linux From Scratch")
    sed -i '/RESIZECONS_PROGS=/s/yes/no/' configure
    sed -i 's/resizecons.8 //' docs/man/man8/Makefile.in

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --disable-vlock \
     --enable-optional-progs \
     --enable-nls \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Include Dragora's menu-driven tool to configure the keyboard map

    mkdir -p "${destdir}/usr/sbin"
    cp -p "${worktree}/archive/dragora-tools/dragora-keymap" \
          "${destdir}/usr/sbin"
    chmod 755 "${destdir}/usr/sbin/dragora-keymap"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

