program=dialog
version=1.3-20171209
pkgversion="$(echo $version | tr - _)"
release=2

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/tools"

tarname=${program}-${version}.tgz

# Remote source(s)
fetch=http://invisible-mirror.net/archives/dialog/$tarname

description="
Display dialog boxes in scripts.

Dialog is a program that will let you present a variety
of questions or display messages in nice looking color
non-graphical dialog boxes from a shell or perl script.
"

homepage=http://www.gnu.org/software/ncurses
license=LGPLv2.1

# Source documentation
docs="CHANGES COPYING README VERSION"
docsdir="${docdir}/${program}-${pkgversion}"

# Custom source directory
srcdir=${program}-${version}

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --enable-widec \
     --with-ncursesw \
     --build="$(cc -dumpmachine)"

    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # Insert the look & feel of Dragora-3.0.  ;-)

    mkdir -p "${destdir}/etc"
    cp -p "${worktree}/archive/dialog/dialogrc" "${destdir}/etc/"
    chmod 644 "${destdir}/etc/dialogrc"

    # To manage .new (config) files via graft(8)
    touch "${destdir}/etc/.graft-config"

    # Compress man page and copy documentation

    lzip -9 "${destdir}/${mandir}/man1/dialog.1"

    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

