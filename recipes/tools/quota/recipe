program=quota
version=4.05
release=2

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/tools"

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://downloads.sourceforge.net/project/linuxquota/quota-tools/${version}/$tarname

description="
User space tools to manage the disk quota system.

Tools for the disk quota system as part of the Linux Kernel.
"

homepage=http://sourceforge.net/projects/linuxquota
license="GPLv2+ | BSD"

# Source documentation
docs="COPYING Changelog README*"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Apply patches to work under Musl (patches from Khem Raj)
    patch -p1 < "${worktree}/patches/quota/fcntl.patch"

    # This is one is from Dragora
    patch -p1 < "${worktree}/patches/quota/cdefs.h.patch"

    ./configure CPPFLAGS="-D_GNU_SOURCE -D_BSD_SOURCE" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --sysconfdir=/etc/quota \
     --mandir=$mandir \
     --docdir=$docsdir \
     --disable-werror \
     --enable-rpc=yes \
     --enable-ldapmail=no \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # To manage dot (new) config files via graft(1)
    touch "${destdir}/etc/quota/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

