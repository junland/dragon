# Exit immediately on any error
set -e

program=alsa-utils
version=1.2.5.1
release=1

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=ftp://ftp.alsa-project.org/pub/utils/$tarname

description="
The ALSA utilities.

The alsa-utils package contains various utilities
which are useful for controlling your sound card.
"

homepage=https://alsa-project.org
license=GPLv2+

# Source documentation
docs="COPYING ChangeLog TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --disable-xmlto \
     --disable-rst2man \
     --disable-alsaconf \
     --with-curses=ncursesw \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Include rc file
    mkdir -p "${destdir}/etc/rc.d"
    cp -p "${worktree}/archive/alsa-utils/rc.alsa" "${destdir}/etc/rc.d/"
    chmod 755 "${destdir}/etc/rc.d/rc.alsa"

    touch "${destdir}/etc/rc.d/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

