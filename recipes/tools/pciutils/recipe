# Exit immediately on any error
set -e

program=pciutils
version=3.7.0
release=2

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://mirrors.edge.kernel.org/pub/software/utils/pciutils/$tarname

description="
The PCI utilities.

The pciutils package is a set of programs for listing PCI devices,
inspecting their status and setting their configuration registers.
"

homepage=https://mj.ucw.cz/sw/pciutils/
license=GPLv2+

# Source documentation
docs="COPYING ChangeLog README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Make

    make -j${jobs} V=1 CPPFLAGS="$QICPPFLAGS" \
    OPT="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     PREFIX=/usr \
     LIBDIR=/usr/lib${libSuffix} \
     IDSDIR=/usr/share/hwdata \
     SHARED=yes \
     LIBKMOD=yes \
     PCI_IDS=pci.ids \
     PCI_COMPRESSED_IDS=0 \
     ZLIB=no

    # Install

    make -j${jobs} V=1 OPT="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     PREFIX=/usr \
     LIBDIR=/usr/lib${libSuffix} \
     IDSDIR=/usr/share/hwdata \
     SHARED=yes \
     LIBKMOD=yes \
     PCI_IDS=pci.ids \
     PCI_COMPRESSED_IDS=0 \
     ZLIB=no \
     DESTDIR="$destdir" install install-lib

    # Fix library permissions
    chmod 755 "${destdir}/usr/lib${libSuffix}/libpci.so.${version}"

    # This is provided by the 'hwids' package
    rm -rf "${destdir}/usr/share/hwdata"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

