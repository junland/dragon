program=patch
version=2.7.6
release=2

# Define hash tag to categorize the package name output
pkghashtag=tools

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=ftp://ftp.gnu.org/gnu/patch/$tarname

description="
A tool to patch files.

The patch package contains a program to modify or create files through
the aplication of a patch file created with the diff(1) program.
"

homepage=http://www.gnu.org/software/patch
license=GPLv3+

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Update for hosts based on musl
    cp -f "${worktree}/archive/common/config.guess" build-aux/config.guess
    cp -f "${worktree}/archive/common/config.sub" build-aux/config.sub

    # http://cve.mitre.org/cgi-bin/cvename.cgi?name=CVE-2018-1000156
    patch -p1 < "${worktree}/patches/patch/Fix_segfault_with_mangled_rename_patch.patch"
    patch -p1 < "${worktree}/patches/patch/Allow_input_files_to_be_missing_for_ed-style_patches.patch"
    patch -p1 < "${worktree}/patches/patch/Fix_arbitrary_command_execution_in_ed-style_patches.patch"

    autoreconf -vif

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Remove generated charset.alias
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"
    rmdir "${destdir}/usr/lib${libSuffix}" || true

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}/"
}

