program=jfsutils
version=1.1.15
release=2

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://jfs.sourceforge.net/project/pub/$tarname

description="
A Journaled File System developed by IBM.

IBM's journaled file system technology, currently used in IBM enterprise
servers, is designed for high-throughput server environments, key to
running intranet and other high-performance e-business file servers.
"

homepage=http://jfs.sourceforge.net
license=GPLv3+

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches against Musl
    # Thanks to "Debian GNU/Linux", and thanks to "Alpine Linux"
    for file in "${worktree}"/patches/jfsutils/*.patch
    do
        patch -Np1 -i "$file"
    done
    unset file

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --disable-dependency-tracking \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} V=1 DESTDIR="$destdir" install

    # Replace hard-links at usr/sbin
    (
        cd "${destdir}/usr/sbin"
        ln -sf jfs_fsck fsck.jfs
        ln -sf jfs_mkfs mkfs.jfs
    )

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Replace hard-links at usr/share/man/man8
    (
        cd "${destdir}/usr/share/man/man8"
        ln -sf jfs_fsck.8.gz fsck.jfs.8.gz
        ln -sf jfs_mkfs.8.gz mkfs.jfs.8.gz
    )


    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}/"
}

