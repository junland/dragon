program=LVM2
version=2.02.168
release=1

pkgname=lvm2

tarname=${program}.${version}.tgz

# Remote source(s)
fetch=http://sourceware.org/ftp/lvm2/releases/$tarname

description="
Logical Volume Management tools.

LVM2 refers to the userspace toolset that provide
logical volume management facilities on GNU/linux.
"

homepage=http://www.sourceware.org/lvm2
license="GPLv2+, LGPL2.1"

# Source documentation
docs="COPYING* README VERSION VERSION_DM WHATS_NEW WHATS_NEW_DM"
docsdir="${docdir}/${program}-${version}"

# The package has a custom source directory
srcdir=${program}.${version}

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches from Alpine Linux in order to build against Musl
    patch -p1 < "${worktree}/patches/lvm2/fix-stdio-usage.patch"
    patch -p1 < "${worktree}/patches/lvm2/mallinfo.patch"
    patch -p1 < "${worktree}/patches/lvm2/library_dir-default-config.patch"
    patch -p1 < "${worktree}/patches/lvm2/mlockall-default-config.patch"

    # --enable-static_link does not work in this version
    ./configure CFLAGS="$QICFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --with-usrlibdir=/usr/lib${libSuffix} \
     --with-udev-prefix=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-pkgconfig \
     --enable-applib \
     --enable-cmdlib \
     --enable-dmeventd \
     --enable-udev_rules \
     --enable-udev_sync \
     --disable-readline \
     --with-lvm1=internal \
     --with-thin=internal \
     --with-device-uid=0 \
     --with-device-gid=11 \
     --with-device-mode=0660 \
     --build="$(cc -dumpmachine)"

    make -j${jobs} DESTDIR="$destdir" install

    # Strip remaining binaries and libraries
    find "$destdir" -type f | xargs file | \
     awk '/ELF/ && /executable/ || /shared object/' | \
      cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

    # Manage .new (config) files via graft(8)
    touch "${destdir}/etc/lvm/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

