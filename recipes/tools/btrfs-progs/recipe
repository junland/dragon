# Exit immediately on any error
set -e

program=btrfs-progs
version=5.16
release=1

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-v${version}.tar.gz

# Remote source(s)
fetch=https://www.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/$tarname

description="
Userspace utilities to manage btrfs filesystems.

Btrfs is a copy on write (COW) filesystem for Linux aimed at implementing
advanced features while focusing on fault tolerance, repair and easy
administration.
"

homepage=https://www.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/
license=GPLv2+

# Source documentation
docs="CHANGES COPYING README* VERSION"
docsdir="${docdir}/${program}-${version}"

# The source has a custom directory name
srcdir="${tarname%.tar*}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Fix conflict with the sysinfo definition under Musl
    patch -Np1 -i "${worktree}/patches/btrfs-progs/sysinfo-glibc.patch"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
     CFLAGS="$QICFLAGS -O3" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --disable-backtrace \
     --disable-zstd \
     --with-convert=ext2 \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Install Bash completion file
    install -p -m 644 btrfs-completion -D \
     "${destdir}/usr/share/bash-completion/completions/btrfs"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

