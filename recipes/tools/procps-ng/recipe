# Build recipe for procps-ng.
#
# Copyright (C) 2016-2017 Matias A. Fonzo, selk@dragora.org.
#
# This recipe is free software: you have unlimited permission
# to copy, distribute and modify it.

program=procps-ng
version=3.3.12
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://downloads.sourceforge.net/project/procps-ng/Production/$tarname

description="
The /proc file system utilities.

Procps-ng is the package that has a bunch of small utilities that give
information about processes using the /proc filesystem.

The package includes: sysctl, pgrep, top, w, pwdx, vmstat, pkill,
tload, slabtop, pidof, uptime, watch, free, pmap, ps.
"

homepage=https://sourceforge.net/projects/procps-ng
license="GPLv2+, LGPLv2+"

# Source documentation
docs="AUTHORS COPYING* ChangeLog NEWS"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static \
     --enable-shared \
     --disable-kill \
     --disable-modern-top \
     --without-systemd \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

