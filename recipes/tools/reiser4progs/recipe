# Exit immediately on any error
set -e

program=reiser4progs
version=2.0.4
release=1

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://downloads.sourceforge.net/reiser4/$tarname

description="
Utilities for manipulating Reiser4 filesystems.

It contains the library for reiser4 filesystem access and manipulation
and reiser4 utilities.
"

homepage=http://www.namesys.com
license=GPLv2

# Source documentation
docs="AUTHORS BUGS COPYING CREDITS NEWS README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS -O3" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --docdir=$docsdir \
     --enable-shared=no \
     --enable-static=yes \
     --enable-libminimal=yes \
     --disable-Werror \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1 CFLAGS="$QICFLAGS -O3" LDFLAGS="$QILDFLAGS -static"
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

