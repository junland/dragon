# Exit immediately on any error
set -e

program=man-db
version=2.9.4
release=2

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=https://download.savannah.gnu.org/releases/man-db/$tarname

description="
Programs for finding and viewing man pages.

The man-db package contains programs for finding and viewing manual pages.
"

homepage=https://man-db.nongnu.org
license=GPLv2+

# Source documentation
docs="ChangeLog FAQ NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --disable-setuid \
     --disable-cache-owner \
     --enable-static=yes \
     --enable-shared=no \
     --with-sections="1 1p 8 2 3 3p 4 5 6 7 9 0p tcl n l p o 1x 2x 3x 4x 5x 6x 7x 8x" \
     --with-db=gdbm \
     --with-systemdtmpfilesdir="no" \
     --with-systemdsystemunitdir="no" \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Remove generated charset.alias
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"

    # Insert our man_db config
    cp -p "${worktree}/archive/man-db/etc/man_db.conf" \
          "${destdir}/etc/"
    chmod 644 "${destdir}/etc/man_db.conf"

    # To handle .new config file(s)
    touch "${destdir}/etc/.graft-config"

    # Include cron job

    mkdir -p "${destdir}/etc/cron.daily/"
    cp -p "${worktree}/archive/man-db/etc/cron.daily/man-db" \
          "${destdir}/etc/cron.daily/"
    chmod 0755 "${destdir}/etc/cron.daily/man-db"

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

