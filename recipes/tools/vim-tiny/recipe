# Exit immediately on any error
set -e

program=vim
version=9.0.1063
release=1

pkgname=vim-tiny

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/vim/vim/archive/v${version}/$tarname

homepage=https://www.vim.org

description="
The ubiquitous text editor (tiny version).

Vim is a highly configurable text editor built to make creating and
changing any kind of text very efficient.  It is included as \"vi\"
with most UNIX systems and with Apple OS X.

For more information, visit:  $homepage
"

license=Custom

# Source documentation
docs="CONTRIBUTING.md README.md"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd $srcdir

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Workaround for the special 'srcdir' variable, it is internally
    # imported and exported from vim's ./configure
    saved_srcdir=$srcdir
    unset -v srcdir

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-gui=no \
     --enable-multibyte \
     --disable-netbeans \
     --disable-gtktest \
     --disable-icon-cache-update \
     --disable-desktop-database-update \
     --with-features=tiny \
     --with-compiledby="Dragora GNU/Linux-Libre" \
     --without-x \
     --build="$(gcc -dumpmachine)"

    # Restore 'srcdir'
    srcdir=$saved_srcdir
    unset -v saved_srcdir

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Do not include this for our "tiny" package
    rm -rf "${destdir}/usr/share/applications" \
           "${destdir}/usr/share/icons"

    # Add wrappers script from Dragora for compatibility mode (vi)
    cp -f "${worktree}/archive/vim/usr/bin/vi" \
          "${destdir}/usr/bin"
    chmod 755 "${destdir}/usr/bin/vi"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

