# Exit immediately on any error
set -e

program=less
version=590
release=2

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://ftp.gnu.org/gnu/less/$tarname

description="
A text file viewer.

Less is a pager.  A pager is a program that displays text files.

This package also includes the 'lesspipe.sh' script.
"

homepage=https://www.gnu.org/software/less
license=GPLv3+

# Source documentation
docs="COPYING LICENSE NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --mandir=$mandir \
     --with-regex=pcre2 \
     --with-secure \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Include our custom lesspipe.sh version (which has support for lzip)

    cp -p "${worktree}/archive/less/usr/bin/lesspipe.sh" "${destdir}/usr/bin"
    chmod 755 "${destdir}/usr/bin/lesspipe.sh"

    # Include profile file
    mkdir -p "${destdir}/etc/profile.d"
    cat "${worktree}/archive/less/etc/profile.d/less.sh" \
      > "${destdir}/etc/profile.d/less.sh"

    # To handle config file(s)
    touch "${destdir}/etc/profile.d/.graft-config"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

