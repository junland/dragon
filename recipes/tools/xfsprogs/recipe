program=xfsprogs
version=5.2.1
release=1

# Define hash tag to categorize the package name output
pkghashtag=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://mirrors.edge.kernel.org/pub/linux/utils/fs/xfs/xfsprogs/$tarname

description="
A high-performance journaling filesystem.

XFS combines advanced journaling technology with full 64-bit addressing
and scalable structures and algorithms.  This combination delivers the
most scalable high-performance filesystem ever conceived.
"

homepage=http://xfs.org
license="GPLv2+, LGPLv2.1"

# Source documentation
docs="README VERSION LICENSES/*"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Apply patches against Musl (Thanks to "Alpine Linux")
    for file in "${worktree}"/patches/xfsprogs/*.patch
    do
        patch -Np1 -i "$file"
    done
    unset file

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    OPTIMIZER="$QICFLAGS" DEBUG="-DNDEBUG" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --libexecdir=/usr/libexec/xfsprogs \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static=yes \
     --enable-shared=yes \
     --enable-blkid=yes \
     --enable-gettext=yes \
     --enable-readline=yes \
     --enable-lto=no \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1

    make -j${jobs} V=1 \
     DIST_ROOT="$destdir" \
     PKG_ROOT_SBIN_DIR="/usr/sbin" \
     PKG_ROOT_LIB_DIR="/usr/lib${libSuffix}" \
     install install-dev

    # Remove cron job for the experimental xfs_scrub utility
    rm -f "${destdir}/usr/lib${libSuffix}/xfsprogs/xfs_scrub_all.cron"
    rmdir "${destdir}/usr/lib${libSuffix}/xfsprogs"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation

    # Remove non-versioned location
    rm -rf "${destdir}/usr/share/doc/xfsprogs"

    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}/"
}

