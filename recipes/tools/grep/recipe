# Build recipe for grep.
#
# Copyright (C) 2016-2017 Matias A. Fonzo, selk@dragora.org.
#
# This recipe is free software: you have unlimited permission
# to copy, distribute and modify it.

program=grep
version=3.1
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnu.org/gnu/grep/$tarname

description="
A string search tool.

The grep command searches one or more input files for lines
containing a match to a specified pattern.  By default,
grep outputs the matching lines.
"

homepage=http://www.gnu.org/software/grep
license=GPLv3+

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README* TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Remove generated charset.alias
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"
    rmdir "${destdir}/usr/lib${libSuffix}" || true

    # Provide from Dragora better wrapper scripts for egrep and fgrep
    cp -f "${worktree}/archive/grep/usr/bin/egrep" "${destdir}/usr/bin"
    cp -f "${worktree}/archive/grep/usr/bin/fgrep" "${destdir}/usr/bin"
    chmod 755 "${destdir}/usr/bin/egrep" "${destdir}/usr/bin/fgrep"

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

