# Exit immediately on any error
set -e

program=xf86-input-wacom
version=0.36.1
release=2

# Define a category for the output of the package name
pkgcategory=xorg_driver

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=https://github.com/linuxwacom/xf86-input-wacom/releases/download/${program}-${version}/$tarname

description="
Wacom tablet driver for the Xorg X server.

X.Org xserver compatible driver for wacom graphics tablets.
"

homepage=https://github.com/linuxwacom
license=GPLv2+

# Source documentation
docs="AUTHORS ChangeLog GPL version"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS " LDFLAGS="$QILDFLAGS -Wl,-z,lazy" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     || true

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Refuse / Resist!
    rm -rf "${destdir}/usr/lib${libSuffix}/systemd"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"

    for file in $docs
    do
        if test -e $file
        then
            cp -p $file "${destdir}/$docsdir"
        fi
    done
}

