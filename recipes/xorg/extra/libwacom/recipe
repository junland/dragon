# Exit immediately on any error
set -e

program=libwacom
version=1.8
release=1

# Define a category for the output of the package name
pkgcategory=xorg_extra

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://github.com/linuxwacom/libwacom/releases/download/${program}-${version}/$tarname

description="
libwacom is a tablet description library.

To complete the support for wacom devices the package
xf86-input-wacom must be installed.
"

homepage=http://github.com/linuxwacom
license=MIT

# Source documentation
docs="COPYING NEWS README.md"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static=no \
     --enable-shared=yes \
     --build="$(gcc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

