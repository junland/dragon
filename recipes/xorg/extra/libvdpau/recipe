# Exit immediately on any error
set -e

program=libvdpau
version=1.4
release=1

# Define a category for the output of the package name
pkgcategory=xorg_extra

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=https://gitlab.freedesktop.org/vdpau/libvdpau/-/archive/${version}/$tarname

description="
A library which implements the VDPAU library.

VDPAU (Video Decode and Presentation API for Unix) is an open source
library (libvdpau) and API originally designed by Nvidia for its
GeForce 8 series and later GPU hardware targeted at the X Window System.
"

homepage=https://www.freedesktop.org/wiki/Software/VDPAU/
license="MIT X Consortium"

# Source documentation
docs="AUTHORS COPYING"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir BUILD
    cd BUILD

    CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" \
    LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --buildtype=release \
     --strip \
     ..

    ninja -j${jobs}
    DESTDIR="$destdir" ninja -j${jobs} install

    # To handle (dot) .new files via graft(1)
    touch "${destdir}/etc/.graft-config"

    cd ../

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

