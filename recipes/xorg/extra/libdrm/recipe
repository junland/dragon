program=libdrm
version=2.4.99
release=1

# Define a category for the output of the package name
pkgcategory=xorg_extra

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://dri.freedesktop.org/libdrm/$tarname

description="
Direct rendering manager.

libdrm provides core library routines for the X Window System to
directly interface with video hardware using the Linux Kernel's
Direct Rendering Modules.
"

homepage=http://cgit.freedesktop.org/mesa/drm/
license=MIT

# Source documentation
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Apply a patch in order to compile against musl (Thanks to "Alpine Linux")
    patch -Np1 -i "${worktree}/patches/libdrm/libdrm-ioctl.patch"

    mkdir -p build
    cd build

    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --buildtype=release \
     --strip \
     -Dudev=true \
     -Dcairo-tests=false \
     -Dvalgrind=false \
     ..

    ninja
    DESTDIR="$destdir" ninja install

    cd ..

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi
}

