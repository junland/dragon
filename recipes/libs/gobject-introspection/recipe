program=gobject-introspection
version=1.56.0
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/gobject-introspection/1.56/$tarname

description="
GObject introspection is a middleware layer between C libraries (using GObject) and language bindings.
"

homepage=https://wiki.gnome.org/Projects/GObjectIntrospection/
license="GPLv2 or LGPLv2.1"

# Copy documentation
docs="AUTHORS CONTRIBUTORS COPYING COPYING.GPL COPYING.LGPL ChangeLog NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"
    
    cd "$srcdir"
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=/usr/man \
    --infodir=/usr/info \
    --disable-static
    
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do 
        cp -p $file "${destdir}${docsdir}"
    done
}