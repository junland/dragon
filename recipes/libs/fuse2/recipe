program=fuse
version=2.9.9
release=2

# Set custom package name
pkgname=fuse2

# Define hash tag to categorize the package name output
pkghashtag=libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://github.com/libfuse/libfuse/releases/download/fuse-${version}/$tarname

description="
Filesystem in userspace (release 2).

FUSE (Filesystem in Userspace) is a simple interface for userspace
programs to export a virtual filesystem to the Linux kernel.  FUSE
also aims to provide a secure method for non privileged users to
create and mount their own filesystem implementations.
"

homepage=http://github.com/libfuse/libfuse/
license="GPLv2+, LGPLv2.1"

# Source documentation
docs="AUTHORS COPYING* ChangeLog NEWS README*"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    MOUNT_FUSE_PATH=/usr/sbin INIT_D_PATH=/etc/rc.d \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-lib \
     --enable-util \
     --disable-static \
     --disable-example \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Replace rc script with a better one from Dragora!
    rm -f "${destdir}/etc/rc.d/fuse"
    cp -p "${worktree}/archive/fuse/rc.fuse" "${destdir}/etc/rc.d/"
    chmod 755 "${destdir}/etc/rc.d/rc.fuse"

    touch "${destdir}/etc/rc.d/.graft-config"

    # Rules for FUSE are already managed by eudev
    rm -rf "${destdir}/etc/udev" "${destdir}/dev"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

