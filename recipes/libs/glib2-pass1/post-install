
if test -d "${rootdir}/lib/gio/modules"
then
    echo "Updating GIO module(s) cache: gio-querymodules ${rootdir}/lib/gio/modules ..."
    chroot "$rootdir" /usr/bin/gio-querymodules lib/gio/modules
fi

echo "Updating GLIB schemas: glib-compile-schemas ${rootdir}/usr/local/share/glib* ${rootdir}/usr/share/glib*"
for directory in usr/local/share/glib* usr/share/glib*
do
    test -d "${rootdir}/$directory" || continue;
    chroot "$rootdir" /usr/bin/glib-compile-schemas "${directory}"/schemas
done
unset -v directory

