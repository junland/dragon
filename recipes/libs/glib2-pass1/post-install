
if test -d "${rootdir}/lib/gio/modules"
then
    echo "Updating GIO module(s) cache: gio-querymodules lib/gio/modules ..."
    chroot "$rootdir" /usr/bin/gio-querymodules lib/gio/modules 2> /dev/null
fi

echo "Updating GLIB schemas: glib-compile-schemas usr/local/share/glib* usr/share/glib*"
for directory in usr/local/share/glib* usr/share/glib*
do
    test -d "${rootdir}/$directory" || continue;
    chroot "$rootdir" /usr/bin/glib-compile-schemas "${directory}"/schemas 2> /dev/null
done
unset -v directory

