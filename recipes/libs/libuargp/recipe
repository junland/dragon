# Exit immediately on any error
set -e

program=libuargp
version=20210611_1f92296
release=1

# Define a category for the output of the package name
pkgcategory=libs

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch="
 https://dragora.mirror.garr.it/current/sources/$tarname
 rsync://rsync.dragora.org/current/sources/$tarname
"

description="
A library providing the functionality of the argp module from Gnulib.

libuargp is a library providing the command-line parsing functionality
of the argp module of the GNU Portability Library (Gnulib).
"

homepage=https://github.com/xhebox/libuargp/
license=LGPLv2.1

# Source documentation
docs="COPYING README.md"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    make -j${jobs} prefix=/usr libdir=/usr/lib${libSuffix} \
     CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS -fPIC -Wall" LDFLAGS="$QILDFLAGS" \
     DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

