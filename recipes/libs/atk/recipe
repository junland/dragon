program=atk
version=2.28.1
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/atk/2.28/$tarname

description="
A library of accessibility functions.

It is used by the GTK+-2 toolkit. 
ATK is part of the GNOME Accessibility Framework.
"

homepage=https://developer.gnome.org/atk/
license=LGPL

docs=""
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    mkdir -pv build
    cd build

    meson $configure_args
    ninja

    DESTDIR="$destdir" ninja install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do
	cp -p $file "${destdir}${docsdir}"
    done
}
