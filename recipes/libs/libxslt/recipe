# Exit immediately on any error
set -e

program=libxslt
version=1.1.34
release=4

# Define a category for the output of the package name
pkgcategory=libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://xmlsoft.org/sources/$tarname

description="
XSLT support for libxml2.

The libxslt package contains XSLT libraries.  These are useful for
extending libxml2 libraries in order to support XSLT files.
"

homepage=https://xmlsoft.org
license=MIT

docs="AUTHORS ChangeLog Copyright NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

# The source has a custom directory
srcdir="${program}-${version%-*}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # This increases the recursion limit.  This is
    # needed by some packages for their documentation
    sed -e 's/3000/5000/' \
        -i libxslt/transform.c doc/xsltproc.1 doc/xsltproc.xml

    ./configure CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static=no \
     --enable-shared=yes \
     --with-python=/usr/bin/python3 \
     --build="$(gcc -dumpmachine)"
     
    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install-strip

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi
     
    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

