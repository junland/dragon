program=lzlib
version=1.11
release=3

# Define hash tag to categorize the package name output
pkghashtag=libs

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch=http://download.savannah.gnu.org/releases/lzip/lzlib/$tarname

homepage=http://lzip.nongnu.org/lzlib.html
license=GPLv2+

description="
A data compression library for the lzip format.

Lzlib is a data compression library providing in-memory LZMA
compression and decompression functions, including integrity checking
of the decompressed data.  The compressed data format used by the
library is the lzip format.  Lzlib is written in C.

For more information, visit: $homepage
"

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Remove default opt level (-Os) to leave the default -O2
    ./configure CFLAGS+="$(echo $QICFLAGS | sed 's/\-Os//')" \
    LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --infodir=$infodir \
     --mandir=$mandir \
     --disable-ldconfig \
     --build="$(cc -dumpmachine)"

    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # To install minilzip
    make -j${jobs} DESTDIR="$destdir" install-bin

    # Compress info documents

    rm -f "${destdir}/${infodir}/dir";	# Redundancy
    lzip -9 "${destdir}/${infodir}/lzlib.info"

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

