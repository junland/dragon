program=fribidi
version=1.0.2
release=1

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=http://github.com/fribidi/fribidi/releases/download/v1.0.2/$tarname

description="
A Free Implementation of the Unicode Bidirectional Algorithm.

This library implements the Unicode BiDirectional algorithm, which
is needed in order to support right-to-left languages such as Arabic
and Hebrew.  It is used in display software like KDE's SVG modules.
"

homepage=https://github.com/fribidi/fribidi/
license=GPL

docs="AUTHORS ChangeLog COPYING NEWS README THANKS TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=/usr/man \
    --infodir=/usr/info \
    --disable-docs \
    --build="$(cc -dumpmachine)"
     
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install
     
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
        
    for file in $docs
    do
       cp -p $file "${destdir}${docsdir}"
    done
}
