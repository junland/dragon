program=alsa-plugins
version=1.1.9
release=1

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/libs"

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=ftp://ftp.alsa-project.org/pub/plugins/$tarname

description="
Plugins for ALSA.

The alsa-plugins package contains plugins for
various audio libraries and sound servers.
"

homepage=http://alsa-project.org
license="LGPLv2.1, GPLv2+"

# Source documentation
docs="COPYING* version"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Update for hosts based on musl
    cp -f "${worktree}/archive/common/config.guess" config.guess
    cp -f "${worktree}/archive/common/config.sub" config.sub

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

