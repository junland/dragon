program=pango
version=1.42.0
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/pango/1.42/$tarname

description="
A library for layout and rendering of text.

Pango can be used anywhere that text layout is needed;
however, most of the work on Pango was done using the GTK+
widget toolkit as a test platform. Pango forms the core of text and
font handling for GTK+-2.
"

homepage=http://www.pango.org/Introduction/
license=LGPLv2

# Copy documentation
docs="AUTHORS COPYING HACKING MAINTAINERS NEWS README THANKS"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    mkdir -pv build
    cd build

    meson $configure_args
    ninja

    DESTDIR="$destdir" ninja install

    # Copy documentation
    cd ..
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do
	cp -p $file "${destdir}${docsdir}"
    done
}
