
if test -d usr/lib/gio/modules
then
    echo "Updating GIO module(s) cache: gio-querymodules usr/lib/gio/modules ..."
    chroot "$rootdir" /usr/bin/gio-querymodules usr/lib/gio/modules
fi

echo "Updating GLIB schemas: glib-compile-schemas usr/local/share/glib* usr/share/glib*"
for directory in usr/local/share/glib* usr/share/glib*
do
    test -d "$directory" || continue;
    chroot "$rootdir" /usr/bin/glib-compile-schemas "${directory}"/schemas
done
unset directory

