# Exit immediately on any error
set -e

program=libieee1284
version=20160924_0663326
release=1

# Define a category for the output of the package name
pkgcategory=libs

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch="
 https://dragora.mirror.garr.it/current/sources/$tarname
 rsync://rsync.dragora.org/current/sources/$tarname
"

description="
Parallel port communication library.

This library is intended to be used by applications that need to
communicate with (or at least identify) devices that are attached
via a parallel port.
"

homepage=https://github.com/twaugh/libieee1284
license=GPLv2+

# Source documentation
docs="AUTHORS ChangeLog NEWS README TODO"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # http://bugs.debian.org/461068
    patch -Np1 -i "${worktree}/patches/libieee1284/release_on_close.patch"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Re-generation of the build system is needed here
    mv configure.in configure.ac
    autoreconf -vif
    touch doc/interface.xml

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-shared=yes \
     --enable-static=no \
     --without-python \
     --build="$(gcc -dumpmachine)" \
     ac_cv_header_sys_io_h=no

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}/$docsdir"
    cp -p $docs "${destdir}/$docsdir"
}

