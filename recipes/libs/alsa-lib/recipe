# to copy, distribute and modify it.

program=alsa-lib
version=1.1.4.1
release=1

tarname=${program}-${version}.tar.bz2

# Remote source(s)
fetch=ftp://ftp.alsa-project.org/pub/lib/$tarname

description="
The ALSA library.

The alsa-lib package contains the ALSA library.  This is used by
programs (including ALSA utilities) requiring access to the ALSA
sound interface.
"

homepage=http://alsa-project.org
license=LGPLv2.1

# Source documentation
docs="COPYING ChangeLog MEMORY-LEAK NOTES TODO version doc/asoundrc.txt"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Update for hosts based on musl
    cp -f "${worktree}/archive/common/config.guess" config.guess
    cp -f "${worktree}/archive/common/config.sub" config.sub

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --disable-python \
     --with-debug=no \
     --build="$(cc -dumpmachine)"

    make -j${jobs} V=1
    make -j${jobs} DESTDIR="$destdir" install

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"

    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

