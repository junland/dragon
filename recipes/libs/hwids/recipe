# Exit immediately on any error
set -e

program=hwids
version=20210613
arch=noarch
release=1

# Define a category for the output of the package name
pkgcategory=libs

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/gentoo/hwids/archive/refs/tags/$tarname

description="
Hardware identification databases.

This package contain a specially re-packaged copy of the pci.ids
and usb.ids files, as well as a copy of IEEE's databases for the
Organizationally Unique Identifiers (OUI) and Individual Address
Block (IAB).
"

homepage=https://github.com/gentoo/hwids
license="GPLv2+ | 3-clause BSD"

# Source documentation
docs="README.md *.txt"
docsdir="${docdir}/${program}-${version}"

# Custom source directory name
srcdir=hwids-hwids-${version}

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Do not run `udevadm hwdb` when installing
    sed -i -e '/udevadm hwdb/d' Makefile

    make -j${jobs} install \
     MISCDIR=/usr/share/hwdata \
     HWDBDIR=/etc/udev/hwdb.d \
     UDEV=yes \
     DOCDIR=$docsdir \
     DESTDIR="$destdir"

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

