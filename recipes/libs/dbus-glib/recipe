program=dbus-glib
version=0.110
release=1

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dbus.freedesktop.org/releases/dbus-glib/$tarname

description="
Glib bindings for D-Bus.

The dbus-glib package contains GLib interfaces to the D-Bus API.
"

homepage=http://www.freedesktop.org/wiki/Software/dbus/
license="AFLv2.1 | GPLv2+"

# Source documentation
docs="AUTHORS COPYING HACKING NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"
    
    cd "$srcdir"
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --enable-shared \
     --disable-static \
     --build="$(cc -dumpmachine)"
    
    make -j${jobs} V=1
    make -j${jobs} V=1 DESTDIR="$destdir" install

    # Compress manpages
    lzip -9 "${destdir}/${mandir}/man1"/*.1
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do
        cp -p $file "${destdir}${docsdir}"
    done
}

