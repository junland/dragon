program=dbus-glib
version=0.110
release=2

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/libs"

# Set a custom package name preventing its replacement
pkgname="$(echo $program | tr - _)"

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=http://dbus.freedesktop.org/releases/dbus-glib/$tarname

description="
Glib bindings for D-Bus.

The dbus-glib package contains GLib interfaces to the D-Bus API.
"

homepage=http://www.freedesktop.org/wiki/Software/dbus/
license="AFLv2.1 | GPLv2+"

# Source documentation
docs="AUTHORS COPYING HACKING NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"
    
    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib${libSuffix} \
     --mandir=$mandir \
     --enable-static=no \
     --enable-shared=yes \
     --build="$(cc -dumpmachine)"
    
    make -j${jobs} V=1
    make -j${jobs} V=1 DESTDIR="$destdir" install-strip

    # Compress manpages
    lzip -9 "${destdir}/${mandir}/"/man?/*.?
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

