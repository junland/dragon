program=gdk-pixbuf
version=2.36.11
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.36/$tarname

description="
An image loading library.

The library provides image loading and saving facilities, fast scaling
and compositing of pixbufs, simple animation loading (i.e. animated GIFs),
and rendering the libart image buffer.
"

homepage=https://developer.gnome.org/gdk-pixbuf/stable/
license=LGPL

# Source documentation
docs="AUTHORS COPYING INSTALL NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"
    
    cd "$srcdir"
    
    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=$mandir \
    --infodir=$infodir \
    --enable-introspection \
    --with-x11 \
    --build="$(cc -dumpmachine)"
    
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # Compress info documents deleting index file for the package
    if test -d "${destdir}/$infodir"
    then
        rm -f "${destdir}/${infodir}/dir"
        lzip -9 "${destdir}/${infodir}"/*
    fi

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi
    
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    
    for file in $docs
    do 
        cp -p $file "${destdir}${docsdir}"
    done
}
