program=at-spi2-atk
version=2.26.1
release=1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://ftp.gnome.org/pub/gnome/sources/at-spi2-atk/2.26/$tarname

description="
A GTK+ module that bridges ATK to D-Bus at-spi.
"

homepage=https://wiki.gnome.org/Accessibility/
license=GPL

docs="AUTHORS COPYING INSTALL NEWS README"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=/usr/man \
    --infodir=/usr/info \
    --build="$(cc -dumpmachine)"
                 
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install
                 
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
                    
    for file in $docs
    do
       cp -p $file "${destdir}${docsdir}"
    done
}
