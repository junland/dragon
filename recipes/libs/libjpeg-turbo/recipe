program=libjpeg-turbo
version=1.5.3
release=1

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://downloads.sourceforge.net/libjpeg-turbo/$tarname

description="
libjpeg-turbo is a high-speed version of libjpeg for x86 and x86-64
processors which uses SIMD instructions to accelerate baseline JPEG
compression and decompression. libjpeg-turbo is generally 2-4x as
fast as the unmodified version of libjpeg, all else being equal.
"

homepage=https://libjpeg-turbo.org/
license="IJG, BSD and zlib"

docs="BUILDING.md ChangeLog.md LICENSE.md README.md README.ijg"
docsdir="${docdir}/${program}-${version}"

build()
{
    set -e
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    ./configure CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --mandir=/usr/man \
    --infodir=/usr/info \
    --with-jpeg8 \
    --docdir=/usr/share/doc/libjpeg-turbo-1.5.3 \
    --disable-static \
    --build="$(cc -dumpmachine)"
         
    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install
         
    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
            
    for file in $docs
    do
       cp -p $file "${destdir}${docsdir}"
    done
}