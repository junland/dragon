# Exit immediately on any error
set -e

program=glib
version=2.66.6
release=1

# Define a category for the output of the package name
pkgcategory=libs

# Set a custom name for this package
pkgname=glib2

# The installation of this package replaces to
replace=glib2-pass1

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch="http://download.gnome.org/sources/glib/${version%.*}/$tarname"

description="
General purpose library of C routines.

GLib is the low-level core library that forms the basis for projects
such as GTK+ and GNOME.  It provides data structure handling for C,
portability wrappers, and interfaces for such runtime functionality
as an event loop, threads, dynamic loading, and an object system.
"

homepage=http://wiki.gnome.org/Projects/GLib
license=LGPLv2.1

# Source documentation
docs="AUTHORS COPYING HACKING NEWS README"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir -p build
    cd build

    CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS -Wl,--no-keep-memory" \
    meson setup $configure_args \
     --libdir /usr/lib${libSuffix} \
     --buildtype=release \
     --strip \
     -Diconv=auto \
     -Dxattr=true \
     -Dinternal_pcre=false \
     -Dman=true \
     -Dgtk_doc=false \
     -Dfam=false \
     -Dselinux=disabled \
     ..

    ninja -j${jobs}
    DESTDIR="$destdir" ninja -j${jobs} install

    cd ..

    # Delete generated charset.alias
    rm -f "${destdir}/usr/lib${libSuffix}/charset.alias"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 {} +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

