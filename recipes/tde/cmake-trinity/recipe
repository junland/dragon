# Exit immediately on any error
set -e

program=cmake
pkgname=cmake-trinity
version=20210720_6980b57
arch=noarch
release=1

# Define a category for the output of the package name
pkgcategory=tde

tarname=${program}-${version}.tar.lz

# Remote source(s)
fetch="
 https://mirror.cedia.org.ec/dragora/current/sources/$tarname
 https://rsync.dragora.org/current/sources/$tarname
"

description="
A common dependency for build TDE r14.0.11+.
"

homepage=https://www.trinitydesktop.org/
license="Academic Free License version 2.1 | GPLv2+"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    rm -rf BUILD
    mkdir BUILD
    cd BUILD

    cmake -G Ninja ..

    ninja -j${jobs}
    DESTDIR="$destdir" ninja -j${jobs} install
}

