program=arts-trinity
pkgname=arts
version=14.0.7
release=2

# Set 'outdir' for a nice and well-organized output directory
outdir="${outdir}/${arch}/tde"

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://mirror.ppa.trinitydesktop.org/trinity/releases/R${version}/main/dependencies/$tarname

description="
Sound server for the Trinity Desktop Environment (TDE).

The arts package includes the sound system support for the
Trinity Desktop Environment (TDE).
"

homepage=http://www.trinitydesktop.org/
license="LGPLv2+, GPLv2+"

# Source documentation
docs="COPYING*"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    set -e

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    patch -Np1 -i \
     "${worktree}/patches/arts/branch-updates_ef3cfbd6d1baa7d4774497552df9bb57b1290500.diff"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir BUILD
    cd BUILD

    cmake \
     -DCMAKE_C_FLAGS_RELEASE:STRING="$QICFLAGS"       \
     -DCMAKE_CXX_FLAGS_RELEASE:STRING="$QICXXFLAGS"   \
     -DCMAKE_SHARED_LINKER_FLAGS:STRING="$QILDFLAGS"  \
     -DCMAKE_INSTALL_PREFIX=/opt/trinity              \
     -DLIB_SUFFIX=${libSuffix}                        \
     -DCMAKE_VERBOSE_MAKEFILE=ON                      \
     -DCMAKE_BUILD_TYPE=Release                       \
     -DCMAKE_SKIP_INSTALL_RPATH=YES                   \
     -DWITH_ALL_OPTIONS=ON                            \
     -DWITH_ESOUND=OFF                                \
     ..

    make -j${jobs}
    make -j${jobs} DESTDIR="$destdir" install

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    cd ..

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

