program=tqca-tls-trinity
pkgname=tqca-tls
version=14.0.7
release=1

# Define a category for the output of the package name
pkgcategory=tde

tarname=${program}-${version}.tar.xz

# Remote source(s)
fetch=http://mirror.ppa.trinitydesktop.org/trinity/releases/R${version}/main/dependencies/$tarname

description="
TQCA TLS plugin.

This is a plugin to provide SSL/TLS capability to programs that
utilize the TQt Cryptographic Architecture (TQCA).
"

homepage=http://www.trinitydesktop.org/
license=LGPLv2.1

# Source documentation
docs="COPYING README"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    set -e

    if test -z "$QTDIR"
    then
        echo "WARNING: Required QTDIR variable is empty." 1>&2
        exit 1;
    fi

    unpack "${tardir}/$tarname"

    cd "$srcdir"

    patch -p1 < "${worktree}/patches/tqca_tls/qca-tls_libressl.patch"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Hard-code path to look for headers

    if test ! -d /usr/include/tqt
    then
        sed -e 's#/usr/include/tqt#/opt/trinity/include/tqt#g' \
            -i configure
    fi

    ./configure --tqtdir=$QTDIR

    make -j${jobs}
    #make -j${jobs} DESTDIR="$destdir" install -- not supported!

    # Install manually
    install -m 755 libtqca-tls.so \
     -D "${destdir}${QTDIR}/plugins/crypto/libtqca-tls.so"

    # Compress and link man pages (if needed)
    if test -d "${destdir}/$mandir"
    then
        (
            cd "${destdir}/$mandir"
            find . -type f -exec lzip -9 '{}' +
            find . -type l | while read -r file
            do
                ln -sf "$(readlink -- "$file").lz" "${file}.lz"
                rm -- "$file"
            done
        )
    fi

    # Copy documentation
    mkdir -p "${destdir}${docsdir}"
    cp -p $docs "${destdir}${docsdir}"
}

