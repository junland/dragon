+ /*
+  * Send SIGINT to a child process if "c" is an interrupt character.
+  */
+     void
+ may_send_sigint(int c UNUSED, pid_t pid UNUSED, pid_t wpid UNUSED)
+ {
+ # ifdef SIGINT
+     if (c == Ctrl_C || c == intr_char)
+     {
+ #  ifdef HAVE_SETSID
+ 	kill(-pid, SIGINT);
+ #  else
+ 	kill(0, SIGINT);
+ #  endif
+ 	if (wpid > 0)
+ 	    kill(wpid, SIGINT);
+     }
+ # endif
+ }
+ 
