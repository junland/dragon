  #include "vim.h"
  
- #ifdef VAX
- # undef FEAT_FLOAT // VAX does not handle well the Infinities
- #endif
- 
  #if defined(FEAT_EVAL) || defined(PROTO)
  
  static int json_encode_item(garray_T *gap, typval_T *val, int copyID, int options);
--- 16,21 ----
